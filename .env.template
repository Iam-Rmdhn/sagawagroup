# CI/CD Environment Configuration Template
# Copy this file to .env and fill in the actual values

# Application Environment
NODE_ENV=production
PORT=5000
BASE_URL=https://www.sagawagroup.id

# Database Configuration (Astra DB)
ASTRA_DB_APPLICATION_TOKEN=your_astra_db_token
ASTRA_DB_API_ENDPOINT=your_astra_db_endpoint

# Security Configuration
JWT_SECRET=your_jwt_secret_here

# Email Configuration
EMAIL_USER=admin@sagawagroup.id
EMAIL_PASS=your_email_password

# File Upload Configuration
UPLOAD_DIR=/var/www/sagawagroup/uploads
MAX_FILE_SIZE=10485760

# Logging Configuration  
LOG_LEVEL=info
LOG_DIR=/var/www/sagawagroup/logs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=https://www.sagawagroup.id,https://sagawagroup.id

# Session Configuration
SESSION_SECRET=your_session_secret
SESSION_TIMEOUT=3600000

# Monitoring
HEALTH_CHECK_ENDPOINT=/api/health
METRICS_ENABLED=true

# Development Settings (will be overridden in production)
DEBUG=false
VERBOSE_LOGGING=false
