---
import Layout from '../../layouts/Layout.astro';
import AdminSidebar from '../../components/admin/sidebar/AdminSidebar.astro';
import AdminNavbar from '../../components/admin/navbar/AdminNavbar.astro';
---
<Layout title="User Management Dummy">
  <AdminNavbar />
  <AdminSidebar currentPage="users" />
  <div class="p-4 sm:ml-64">
    <div class="p-4 border-2 border-gray-200 border-dashed rounded-lg dark:border-gray-700 mt-14">
      <!-- User Stats Cards -->
      <div class="stats-set user-stats" style="display: grid; gap: 1rem; grid-template-columns: repeat(2, minmax(200px, 1fr)); max-width: 600px; margin: 0 auto;">
        <div class="bg-white dark:bg-gray-800 p-4 rounded-lg shadow">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Total Users</h3>
          <p class="text-2xl text-gray-900 dark:text-white">120</p>
        </div>
        <div class="bg-white dark:bg-gray-800 p-4 rounded-lg shadow">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Pending</h3>
          <p class="text-2xl text-gray-900 dark:text-white">5</p>
        </div>
      </div>
      <div class="mb-4 bg-white rounded-lg shadow dark:bg-gray-800 mt-8">
        <div class="flex justify-between items-center p-4">
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white">User Management</h3>
          <button class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition" disabled>
            Refresh Data
          </button>
        </div>
        <div class="overflow-x-auto">
          <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
              <tr>
                <th class="px-6 py-3">Nama User</th>
                <th class="px-6 py-3">Email</th>
                <th class="px-6 py-3">Status</th>
                <th class="px-6 py-3">Tanggal Daftar</th>
              </tr>
            </thead>
            <tbody>
              <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                <td class="px-6 py-4">Tsumugi Kotobuki</td>
                <td class="px-6 py-4">utaakun12@gmail.com</td>
                <td class="px-6 py-4"><span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">approved</span></td>
                <td class="px-6 py-4">01/01/2025</td>
              </tr>
              <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                <td class="px-6 py-4">Yui Hirasawa</td>
                <td class="px-6 py-4">yui@gmail.com</td>
                <td class="px-6 py-4"><span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">pending</span></td>
                <td class="px-6 py-4">15/02/2025</td>
              </tr>
              <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                <td class="px-6 py-4">Azusa Nakano</td>
                <td class="px-6 py-4">azusa@gmail.com</td>
                <td class="px-6 py-4"><span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">approved</span></td>
                <td class="px-6 py-4">20/03/2025</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</Layout>
