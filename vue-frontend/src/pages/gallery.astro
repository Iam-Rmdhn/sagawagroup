---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

// Import gambar dari assets sesuai list
import kccmall from '../assets/img/mall/kccmall.jpg?url';
import sagawaPapan from '../assets/img/papan/sagawa_papan.png?url';
import krbs from '../assets/img/gerobak/krbs.jpg?url';
import sagawaDesk from '../assets/img/papan/sagawa_desk.png?url';
import kcrmall from '../assets/img/mall/kcrmall.jpg?url';
import teh from '../assets/img/menu/teh.png?url';
import rmmall from '../assets/img/mall/rmmal.jpg?url';
import sagawaLuar from '../assets/img/papan/sagawa_luar.png?url';
import kopi from '../assets/img/menu/kopi.jpg?url';
import masgaw from '../assets/img/gerobak/masgaw.jpg?url';
import squash from '../assets/img/menu/squash.jpg?url';
import kbd from '../assets/img/gerobak/kbd.jpg?url';
import sagawaBalon from '../assets/img/papan/balon_sagawa.png?url';
---

<Layout title="Galeri - Sagawa Group">
  <div class="navbar-sticky">
    <Navbar />
  </div>
  <main class="min-h-screen bg-white pt-16">
    <!-- Gallery Header Section -->
      <section class="bg-gradient-to-br from-amber-50 to-orange-50 py-12 sm:py-16 lg:py-20 relative">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
          <div class="text-center mb-8 sm:mb-12 lg:mb-16">
            <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-4 sm:mb-6 animate-fade-in-up">
              Galeri <span class="text-amber-600 hover:text-amber-700 transition-colors duration-300">Sagawa Group</span>
            </h1>
            <p class="text-lg sm:text-sm text-gray-600 max-w-3xl mx-auto leading-relaxed animate-fade-in-up animation-delay-200">
              Koleksi Foto Sagawa Group
            </p>
          </div>
        </div>
        <!-- Floating Animation Elements -->
        <div class="absolute top-10 left-10 w-4 h-4 bg-amber-300 rounded-full animate-float opacity-60"></div>
        <div class="absolute top-32 right-16 w-6 h-6 bg-orange-300 rounded-full animate-float-delay opacity-50"></div>
        <div class="absolute bottom-20 left-1/4 w-3 h-3 bg-amber-400 rounded-full animate-float-slow opacity-40"></div>
        
        <!-- Wave Effect at Bottom -->
        <div class="absolute bottom-0 left-0 w-full overflow-hidden">
          <svg class="relative block w-full h-12 sm:h-20" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320" preserveAspectRatio="none">
            <path fill="white" d="M0,224L48,208C96,192,192,160,288,149.3C384,139,480,149,576,165.3C672,181,768,203,864,197.3C960,192,1056,160,1152,149.3C1248,139,1344,149,1392,154.7L1440,160L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path>
          </svg>
        </div>
      </section>

      <!-- Gallery Grid -->
      <section class="py-16 px-4 sm:px-6 lg:px-8">
        <div class="max-w-7xl mx-auto">
          <!-- Gallery Grid Container - Custom Layout sesuai spesifikasi -->
          <div class="flex flex-col gap-4 mb-12 mx-auto" style="max-width: 1050px;">
            
            <!-- Baris 1 & 2: Layout khusus dengan gambar tinggi di kanan -->
            <div class="flex gap-4 items-start">
              <!-- Kolom kiri untuk gambar 1,2,4,5 -->
              <div class="flex flex-col gap-4">
                <!-- Baris 1: gambar1(255x255) + gambar2(545x255) -->
                <div class="flex gap-4">
                  <!-- Gambar 1 - KCC Mall (255x255) -->
                  <div class="group relative overflow-hidden rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 bg-white size-255">
                    <img 
                      src={kccmall} 
                      alt="Kagawa Coffee Corner Mall" 
                      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                    <div class="absolute bottom-0 left-0 right-0 p-3 text-white transform translate-y-full group-hover:translate-y-0 transition-transform duration-300">
                      <h3 class="text-sm font-semibold mb-1">Kedai Kagawa Coffee Corner</h3>
                      <p class="text-xs text-white/90">Kagawa Coffee Corner</p>
                    </div>
                  </div>

                  <!-- Gambar 2 - Sagawa Papan (545x255) -->
                  <div class="group relative overflow-hidden rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 bg-white size-545x255">
                    <img 
                      src={sagawaPapan} 
                      alt="Sagawa Group Papan" 
                      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                    <div class="absolute bottom-0 left-0 right-0 p-3 text-white transform translate-y-full group-hover:translate-y-0 transition-transform duration-300">
                      <h3 class="text-sm font-semibold mb-1">Logo Sagawa Group</h3>
                      <p class="text-xs text-white/90">Brand Signage</p>
                    </div>
                  </div>
                </div>

                <!-- Baris 2: gambar4(545x255) + gambar5(255x255) -->
                <div class="flex gap-4">
                  <!-- Gambar 4 - Sagawa Desk (545x255) -->
                  <div class="group relative overflow-hidden rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 bg-white size-545x255">
                    <img 
                      src={sagawaDesk} 
                      alt="Sagawa Desk Display" 
                      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                    <div class="absolute bottom-0 left-0 right-0 p-3 text-white transform translate-y-full group-hover:translate-y-0 transition-transform duration-300">
                      <h3 class="text-sm font-semibold mb-1">Standee Sagawa Desk</h3>
                      <p class="text-xs text-white/90">Office Display</p>
                    </div>
                  </div>

                  <!-- Gambar 5 - KCR Mall (255x255) -->
                  <div class="group relative overflow-hidden rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 bg-white size-255">
                    <img 
                      src={kcrmall} 
                      alt="Kagawa Coffee Rice Mall" 
                      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                    <div class="absolute bottom-0 left-0 right-0 p-3 text-white transform translate-y-full group-hover:translate-y-0 transition-transform duration-300">
                      <h3 class="text-sm font-semibold mb-1">Kedai Kagawa Coffee & Rice Bowl Corner</h3>
                      <p class="text-xs text-white/90">Coffee & Ricebowl Corner</p>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Gambar 3 - KRBS Gerobak (250x550) - Tinggi melintasi 2 baris -->
              <div class="group relative overflow-hidden rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 bg-white size-250x550">
                <img 
                  src={krbs} 
                  alt="Kagawa Rice Bowl Special" 
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                <div class="absolute bottom-0 left-0 right-0 p-3 text-white transform translate-y-full group-hover:translate-y-0 transition-transform duration-300">
                  <h3 class="text-sm font-semibold mb-1">Kedai Kagawa Rice Bowl</h3>
                  <p class="text-xs text-white/90">Rice Bowl Special</p>
                </div>
              </div>
            </div>

            <!-- Baris 3: gambar6(255x255) + gambar7(255x255) + gambar8(545x255) -->
            <div class="flex gap-4">
              <!-- Gambar 6 - Teh Menu (255x255) -->
              <div class="group relative overflow-hidden rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 bg-white size-255">
                <img 
                  src={teh} 
                  alt="Tea Menu" 
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                <div class="absolute bottom-0 left-0 right-0 p-3 text-white transform translate-y-full group-hover:translate-y-0 transition-transform duration-300">
                  <h3 class="text-sm font-semibold mb-1">Segelas Teh Hijau Kagawa</h3>
                  <p class="text-xs text-white/90">Premium Tea</p>
                </div>
              </div>

              <!-- Gambar 7 - RM Mall (255x255) -->
              <div class="group relative overflow-hidden rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 bg-white size-255">
                <img 
                  src={rmmall} 
                  alt="RM Nusantara Mall" 
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                <div class="absolute bottom-0 left-0 right-0 p-3 text-white transform translate-y-full group-hover:translate-y-0 transition-transform duration-300">
                  <h3 class="text-sm font-semibold mb-1">Kedai RM Nusantara</h3>
                  <p class="text-xs text-white/90">RM Nusantara</p>
                </div>
              </div>

              <!-- Gambar 8 - Sagawa Luar (545x255) -->
              <div class="group relative overflow-hidden rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 bg-white size-545x255">
                <img 
                  src={sagawaLuar} 
                  alt="Sagawa Outdoor Display" 
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                <div class="absolute bottom-0 left-0 right-0 p-3 text-white transform translate-y-full group-hover:translate-y-0 transition-transform duration-300">
                  <h3 class="text-sm font-semibold mb-1">Papan Nama Sagawa Group</h3>
                  <p class="text-xs text-white/90">Outdoor Display</p>
                </div>
              </div>
            </div>

            <!-- Baris 4: gambar9(255x255) + gambar10(545x255) + gambar11(255x255) -->
            <div class="flex gap-4">
              <!-- Gambar 9 - KCR Mall (255x255) -->
              <div class="group relative overflow-hidden rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 bg-white size-255">
                <img 
                  src={kcrmall} 
                  alt="Kagawa Coffee Rice Mall" 
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                <div class="absolute bottom-0 left-0 right-0 p-3 text-white transform translate-y-full group-hover:translate-y-0 transition-transform duration-300">
                  <h3 class="text-sm font-semibold mb-1">Kedai Kagawa Coffee Mall</h3>
                  <p class="text-xs text-white/90">Store Interior</p>
                </div>
              </div>

              <!-- Gambar 10 - Kopi Menu (545x255) -->
              <div class="group relative overflow-hidden rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 bg-white size-545x255">
                <img 
                  src={kopi} 
                  alt="Coffee Menu" 
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                <div class="absolute bottom-0 left-0 right-0 p-3 text-white transform translate-y-full group-hover:translate-y-0 transition-transform duration-300">
                  <h3 class="text-sm font-semibold mb-1">Menu Kopi</h3>
                  <p class="text-xs text-white/90">Premium Coffee</p>
                </div>
              </div>

              <!-- Gambar 11 - Mas Gaw (255x255) -->
              <div class="group relative overflow-hidden rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 bg-white size-255">
                <img 
                  src={masgaw} 
                  alt="Mas Gaw Food Cart" 
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                <div class="absolute bottom-0 left-0 right-0 p-3 text-white transform translate-y-full group-hover:translate-y-0 transition-transform duration-300">
                  <h3 class="text-sm font-semibold mb-1">Kedai Mas Gaw</h3>
                  <p class="text-xs text-white/90">MasGaw Food Cart</p>
                </div>
              </div>
            </div>

            <!-- Baris 5: gambar12(545x255) + gambar13(255x255) + gambar14(255x255) -->
            <div class="flex gap-4">
              <!-- Gambar 12 - Squash Menu (545x255) -->
              <div class="group relative overflow-hidden rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 bg-white size-545x255">
                <img 
                  src={squash} 
                  alt="Squash Drink Menu" 
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                <div class="absolute bottom-0 left-0 right-0 p-3 text-white transform translate-y-full group-hover:translate-y-0 transition-transform duration-300">
                  <h3 class="text-sm font-semibold mb-1">Pinaple Squash</h3>
                  <p class="text-xs text-white/90">Fresh Pineapple Squash</p>
                </div>
              </div>

              <!-- Gambar 13 - KBD Gerobak (255x255) -->
              <div class="group relative overflow-hidden rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 bg-white size-255">
                <img 
                  src={kbd} 
                  alt="Kagawa Beverages & Dim Sum" 
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                <div class="absolute bottom-0 left-0 right-0 p-3 text-white transform translate-y-full group-hover:translate-y-0 transition-transform duration-300">
                  <h3 class="text-sm font-semibold mb-1">Ruko Development Business</h3>
                  <p class="text-xs text-white/90">Development Business</p>
                </div>
              </div>

              <!-- Gambar 14 - Sagawa Balon (255x255) -->
              <div class="group relative overflow-hidden rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 bg-white size-255">
                <img 
                  src={sagawaBalon} 
                  alt="Sagawa Balloon Display" 
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                <div class="absolute bottom-0 left-0 right-0 p-3 text-white transform translate-y-full group-hover:translate-y-0 transition-transform duration-300">
                  <h3 class="text-sm font-semibold mb-1">Sagawa Balon</h3>
                  <p class="text-xs text-white/90">Promotional Display</p>
                </div>
              </div>
            </div>

          </div>

          <!-- Additional Info Section -->
          <div class="text-center">
            <div class="bg-white rounded-2xl shadow-lg p-8 mx-auto" style="max-width: 1050px;">
              <h2 class="text-3xl font-bold text-gray-800 mb-4">Tentang Galeri Kami</h2>
              <p class="text-gray-600 text-lg leading-relaxed">
                Galeri Sagawa Group menampilkan koleksi foto-foto terbaik dari berbagai outlet dan konsep bisnis kami. 
                Dari store di mall hingga gerobak makanan, setiap lokasi mencerminkan standar kualitas dan pelayanan 
                terbaik Sagawa Group dalam industri food & beverage.
              </p>
              <div class="mt-6 flex flex-wrap justify-center gap-4">
                <span class="bg-red-100 text-red-800 px-4 py-2 rounded-full text-sm font-medium">Kagawa Coffee Corner</span>
                <span class="bg-green-100 text-green-800 px-4 py-2 rounded-full text-sm font-medium">RM Nusantara</span>
                <span class="bg-orange-100 text-orange-800 px-4 py-2 rounded-full text-sm font-medium">Mas Gaw</span>
                <span class="bg-yellow-100 text-yellow-800 px-4 py-2 rounded-full text-sm font-medium">Food Cart</span>
                <span class="bg-blue-100 text-blue-800 px-4 py-2 rounded-full text-sm font-medium">Mall Stores</span>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>
  <Footer />
</Layout>

<style>
  /* Navbar sticky specifically for gallery page */
  .navbar-sticky {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    width: 100%;
  }
  
  /* Ensure navbar sticky works properly */
  .navbar {
		position: sticky;
		top: 0;
		z-index: 50;
	}
  
  .gallery-item {
    transition: all 0.3s ease;
  }
  
  .gallery-item:hover {
    transform: translateY(-8px);
  }
  
  /* Custom size classes sesuai spesifikasi */
  .size-255 {
    width: 255px;
    height: 255px;
    min-width: 255px;
    min-height: 255px;
  }
  
  .size-545x255 {
    width: 545px;
    height: 255px;
    min-width: 545px;
    min-height: 255px;
  }
  
  .size-250x550 {
    width: 250px;
    height: 530px;
    min-width: 250px;
    min-height: 530px;
  }
  
  /* Responsive untuk layar kecil */
  @media (max-width: 1024px) {
    .size-255 {
      width: 200px;
      height: 200px;
      min-width: 200px;
      min-height: 200px;
    }
    
    .size-545x255 {
      width: 400px;
      height: 200px;
      min-width: 400px;
      min-height: 200px;
    }
    
    .size-250x550 {
      width: 200px;
      height: 400px;
      min-width: 200px;
      min-height: 400px;
    }
  }
  
  @media (max-width: 768px) {
    .size-255 {
      width: 150px;
      height: 150px;
      min-width: 150px;
      min-height: 150px;
    }
    
    .size-545x255 {
      width: 300px;
      height: 150px;
      min-width: 300px;
      min-height: 150px;
    }
    
    .size-250x550 {
      width: 150px;
      height: 300px;
      min-width: 150px;
      min-height: 300px;
    }
  }

  /* Fade in up animations */
  @keyframes fade-in-up {
    0% {
      opacity: 0;
      transform: translateY(30px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out forwards;
  }

  .animation-delay-200 {
    animation-delay: 0.2s;
    opacity: 0;
  }

  /* Floating Animations */
  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  @keyframes float-delay {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-15px);
    }
  }

  @keyframes float-slow {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-8px);
    }
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }

  .animate-float-delay {
    animation: float-delay 4s ease-in-out infinite;
    animation-delay: 0.5s;
  }

  .animate-float-slow {
    animation: float-slow 5s ease-in-out infinite;
    animation-delay: 1s;
  }
</style>