        <li :class="filter === 'R & M Nusantara' ? 'active' : ''" @click="filter = 'R & M Nusantara'; subfilter = 'all'" class="cursor-pointer px-6 py-3 rounded-full bg-white border-2 border-amber-200 shadow-md font-semibold transition-all duration-300 hover:scale-105 hover:shadow-lg transform">
