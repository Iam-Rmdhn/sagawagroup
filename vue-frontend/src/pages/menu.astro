---

<Layout title="Sagawa Group - Menu">
  <Navbar />

  <main class="food_section py-12 px-4 bg-gradient-to-b from-gray-50 to-white" x-data="{ filter: 'all', subfilter: 'all' }">
    <div class="container mx-auto max-w-6xl">
      <div class="heading_container text-center mb-10">
        <h2 class="text-3xl md:text-4xl font-bold mb-2">
          <span class="inline-block align-middle mr-2">üçΩÔ∏è</span> Our Delicious Menu
        </h2>
      </div>

      <!-- Filter Menu -->
      <ul class="filters_menu flex flex-wrap justify-center gap-3 mb-6">
        <li :class="filter === 'all' ? 'active' : ''" @click="filter = 'all'; subfilter = 'all'" class="cursor-pointer px-5 py-2 rounded-full bg-white shadow font-medium transition">All Items</li>
        <li :class="filter === 'Rice Bowl' ? 'active' : ''" @click="filter = 'Rice Bowl'; subfilter = 'all'" class="cursor-pointer px-5 py-2 rounded-full bg-white shadow font-medium transition">Rice Bowl</li>
        <li :class="filter === 'Coffe Corner' ? 'active' : ''" @click="filter = 'Coffe Corner'; subfilter = 'all'" class="cursor-pointer px-5 py-2 rounded-full bg-white shadow font-medium transition">Coffe Corner</li>
        <li :class="filter === 'Rice Bowl & COffe Corner' ? 'active' : ''" @click="filter = 'Rice Bowl & COffe Corner'; subfilter = 'all'" class="cursor-pointer px-5 py-2 rounded-full bg-white shadow font-medium transition">Rice Bowl & Coffe Corner</li>
        <li :class="filter === 'Rumah Makan Nusantara' ? 'active' : ''" @click="filter = 'Rumah Makan Nusantara'; subfilter = 'all'" class="cursor-pointer px-5 py-2 rounded-full bg-white shadow font-medium transition">Warung Makan Nusantara</li>
      </ul>

      <!-- Subfilter for Coffe Corner -->
      <template x-if="filter === 'Coffe Corner'">
        <ul class="filters_menu flex flex-wrap justify-center gap-3 mb-10">
          <li :class="subfilter === 'all' ? 'active' : ''" @click="subfilter = 'all'" class="cursor-pointer px-4 py-1 rounded-full bg-white shadow font-medium transition">All</li>
          <li :class="subfilter === 'coffee' ? 'active' : ''" @click="subfilter = 'coffee'" class="cursor-pointer px-4 py-1 rounded-full bg-white shadow font-medium transition">Coffee</li>
          <li :class="subfilter === 'non-coffee' ? 'active' : ''" @click="subfilter = 'non-coffee'" class="cursor-pointer px-4 py-1 rounded-full bg-white shadow font-medium transition">Non Coffee</li>
          <li :class="subfilter === 'donat' ? 'active' : ''" @click="subfilter = 'donat'" class="cursor-pointer px-4 py-1 rounded-full bg-white shadow font-medium transition">Donat</li>
        </ul>
      </template>

      <!-- Menu Cards -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          menus.map(menu => (
            <div
              x-show={`
                filter === 'all'
                || (
                  filter === '${menu.category}'
                  ${menu.category === 'Coffe Corner'
                    ? " && (subfilter === 'all' || subfilter === '" + menu.subcategory + "')"
                    : ''
                  }
                )
              `}
              x-transition:enter="transition ease-out duration-300"
              x-transition:enter-start="opacity-0 scale-95"
              x-transition:enter-end="opacity-100 scale-100"
              x-transition:leave="transition ease-in duration-200"
              x-transition:leave-start="opacity-100 scale-100"
              x-transition:leave-end="opacity-0 scale-95"
              class="box bg-white rounded-xl shadow hover:shadow-lg transition overflow-hidden flex flex-col"
            >
              <div class="relative">
                <img src={menu.img} alt={menu.name} class="w-full h-48 object-cover" />
                <span class={`absolute top-3 right-3 text-white text-xs px-3 py-1 rounded-full ${
                  menu.category === 'Rice Bowl' ? 'bg-indigo-500' :
                  menu.category === 'Coffe Corner' ? 'bg-green-500' :
                  menu.category === 'Rice Bowl & COffe Corner' ? 'bg-pink-500' :
                  'bg-yellow-500'
                }`}>
                  {menu.category}
                  {menu.subcategory ? ` - ${menu.subcategory.charAt(0).toUpperCase() + menu.subcategory.slice(1)}` : ''}
                </span>
              </div>
              <div class="p-5 flex-1 flex flex-col">
                <h5 class="font-bold text-lg mb-1">{menu.name}</h5>
                <p class="text-gray-600 text-sm mb-3 flex-1">{menu.desc}</p>
                <div class="flex justify-between items-center mt-auto">
                  <span class={`font-bold text-lg ${
                    menu.category === 'Rice Bowl' ? 'text-indigo-600' :
                    menu.category === 'Coffe Corner' ? 'text-green-600' :
                    menu.category === 'Rice Bowl & COffe Corner' ? 'text-pink-500' :
                    'text-yellow-600'
                  }`}>{menu.price}</span>
                  <button class={`rounded-full w-10 h-10 flex items-center justify-center transition text-white ${
                    menu.category === 'Rice Bowl' ? 'bg-indigo-500 hover:bg-indigo-600' :
                    menu.category === 'Coffe Corner' ? 'bg-green-500 hover:bg-green-600' :
                    menu.category === 'Rice Bowl & COffe Corner' ? 'bg-pink-500 hover:bg-pink-600' :
                    'bg-yellow-500 hover:bg-yellow-600'
                  }`}>
                    <i class="fas fa-shopping-cart"></i>
                  </button>
                </div>
              </div>
            </div>
          ))
        }
      </div>

      <div class="text-center mt-12">
        <a href="#" class="inline-block bg-indigo-500 hover:bg-indigo-600 text-white px-8 py-3 rounded-full font-bold shadow transition">
          <i class="fas fa-plus-circle mr-2"></i>View More Items
        </a>
      </div>
    </div>
  </main>

  <Footer />

  <!-- Font Awesome CDN -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
  <!-- Alpine.js CDN -->
  <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
  <style>
