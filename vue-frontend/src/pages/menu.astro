<Layout title="Sagawa Group - Menu">
  <Navbar />
  
  <!-- Hero Section -->
  <section class="hero-section relative pt-20 pb-24 sm:pt-24 sm:pb-32 md:pb-36 px-4 text-center text-white bg-gradient-to-br from-amber-500 via-orange-500 to-red-500 overflow-hidden">
    <!-- Background decorative elements -->
    <div class="absolute inset-0 opacity-10">
      <div class="animate-float absolute top-16 sm:top-20 left-4 sm:left-10 w-12 sm:w-16 h-12 sm:h-16 bg-gradient-to-br from-white to-amber-100 rounded-full"></div>
      <div class="animate-float delay-700 absolute top-32 sm:top-40 right-8 sm:right-20 w-8 sm:w-12 h-8 sm:h-12 bg-gradient-to-br from-amber-200 to-amber-300 rounded-full"></div>
      <div class="animate-float delay-500 absolute bottom-24 sm:bottom-32 left-1/4 w-6 sm:w-8 h-6 sm:h-8 bg-gradient-to-br from-orange-200 to-orange-300 rounded-full"></div>
      <div class="animate-float delay-300 absolute bottom-16 sm:bottom-20 right-1/3 w-16 sm:w-20 h-16 sm:h-20 bg-gradient-to-br from-red-200 to-red-300 rounded-full"></div>
      <div class="animate-float delay-200 absolute top-1/2 left-1/3 w-8 sm:w-10 h-8 sm:h-10 bg-gradient-to-br from-yellow-200 to-amber-200 rounded-full"></div>
    </div>
    
    <div class="container mx-auto max-w-4xl relative z-30 px-2">
      <h5 class="text-xs sm:text-sm md:text-base text-amber-200 font-semibold uppercase tracking-wider mb-2 sm:mb-3 animate-fade-in-up">
        Menu Kuliner
      </h5>
      <h1 class="text-2xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-white leading-tight animate-fade-in-up animation-delay-200">
        Menu Pilihan Terbaik
      </h1>
      <div class="w-16 sm:w-24 h-1 bg-gradient-to-r from-amber-200 to-white mx-auto mt-4 sm:mt-6 rounded animate-fade-in-up animation-delay-400"></div>
      <p class="text-sm sm:text-base md:text-lg lg:text-xl mb-6 sm:mb-8 pt-4 sm:pt-6 max-w-3xl mx-auto animate-fade-in-up animation-delay-600 text-amber-100 leading-relaxed px-2">
        Nikmati koleksi menu pilihan terbaik dari brand-brand Sagawa Group. Mulai dari Rice Bowl Jepang, Coffee Corner premium, hingga cita rasa Nusantara yang autentik.
      </p>
    </div>

    <!-- White Wave Effect -->
    <div class="absolute bottom-[-1px] left-0 w-full overflow-hidden z-30">
      <svg class="w-full h-12 sm:h-20" viewBox="0 0 1440 70" preserveAspectRatio="none">
        <path d="M0,70 L0,40 C240,15 480,50 720,45 C960,40 1200,15 1440,25 L1440,70 Z" fill="#FFFFFF"></path>
      </svg>
    </div>
  </section>

  <main class="food_section py-8 sm:py-12 px-2 sm:px-4 bg-white relative mt-[-1px]" x-data="{ 
    brandFilter: '', 
    categoryFilter: '', 
    brandDropdownOpen: false, 
    categoryDropdownOpen: false,
    clearFilters() {
      this.brandFilter = '';
      this.categoryFilter = '';
      this.brandDropdownOpen = false;
      this.categoryDropdownOpen = false;
    },
    getBrandText() {
      return this.brandFilter || 'Filter by Brand';
    },
    getCategoryText() {
      return this.categoryFilter || 'Filter by Category';
    }
  }">
    <div class="container mx-auto max-w-6xl">

      <!-- Header Section -->
      <div class="text-center mb-8 sm:mb-12 scroll-animate opacity-0 transform translate-y-[30px] px-2">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900 mb-4 sm:mb-6 hover:text-amber-600 transition-all duration-500 animate-fade-in-up hover:scale-105">
          Menu Pilihan Terbaik
        </h2>
        <p class="text-sm sm:text-base text-gray-600 animate-fade-in-up animation-delay-200 mb-6 sm:mb-8 leading-relaxed">
          Temukan menu favorit dari berbagai brand dan kategori pilihan kami
        </p>
      </div>

      <!-- Filter Section with Horizontal Layout -->
      <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center gap-4 mb-8 px-2 sm:px-0">
        <!-- Filter Dropdowns -->
        <div class="flex flex-col sm:flex-row gap-3 w-full lg:w-auto">
          <!-- Brand Filter Dropdown -->
          <div class="relative" x-data>
            <button 
              @click="brandDropdownOpen = !brandDropdownOpen"
              :class="brandFilter ? 'bg-gradient-to-r from-amber-500 to-orange-500 text-white shadow-lg' : 'bg-white border border-gray-300 text-gray-700 hover:bg-gray-50'"
              class="filter-button flex items-center justify-between w-full sm:min-w-48 sm:w-auto px-4 py-3 rounded-lg font-medium transition-all duration-200 shadow-sm whitespace-nowrap"
            >
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
                </svg>
                <span x-text="getBrandText()" class="text-sm"></span>
              </div>
              <svg 
                :class="brandDropdownOpen ? 'rotate-180' : ''"
                class="w-4 h-4 transition-transform duration-200" 
                fill="none" 
                stroke="currentColor" 
                viewBox="0 0 24 24"
              >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            
            <div 
              x-show="brandDropdownOpen"
              x-transition:enter="transition ease-out duration-200"
              x-transition:enter-start="opacity-0 scale-95"
              x-transition:enter-end="opacity-100 scale-100"
              x-transition:leave="transition ease-in duration-150"
              x-transition:leave-start="opacity-100 scale-100"
              x-transition:leave-end="opacity-0 scale-95"
              @click.away="brandDropdownOpen = false"
              class="absolute z-50 mt-2 w-full bg-white border border-gray-200 rounded-lg shadow-lg max-h-60 overflow-y-auto"
            >
              <div class="py-2">
                <button 
                  @click="brandFilter = 'Rice Bowl'; categoryFilter = ''; brandDropdownOpen = false"
                  :class="brandFilter === 'Rice Bowl' ? 'bg-amber-50 text-amber-600 font-semibold' : 'text-gray-700 hover:bg-gray-50'"
                  class="w-full px-4 py-2 text-left text-sm transition-colors duration-150"
                >
                  Rice Bowl
                </button>
                <button 
                  @click="brandFilter = 'Coffe Corner'; brandDropdownOpen = false"
                  :class="brandFilter === 'Coffe Corner' ? 'bg-amber-50 text-amber-600 font-semibold' : 'text-gray-700 hover:bg-gray-50'"
                  class="w-full px-4 py-2 text-left text-sm transition-colors duration-150"
                >
                  Coffee Corner
                </button>
                <button 
                  @click="brandFilter = 'Rice Bowl & Coffe Corner'; brandDropdownOpen = false"
                  :class="brandFilter === 'Rice Bowl & Coffe Corner' ? 'bg-amber-50 text-amber-600 font-semibold' : 'text-gray-700 hover:bg-gray-50'"
                  class="w-full px-4 py-2 text-left text-sm transition-colors duration-150"
                >
                  Rice Bowl & Coffee Corner 
                </button>
                <button 
                  @click="brandFilter = 'RM Nusantara'; brandDropdownOpen = false"
                  :class="brandFilter === 'RM Nusantara' ? 'bg-amber-50 text-amber-600 font-semibold' : 'text-gray-700 hover:bg-gray-50'"
                  class="w-full px-4 py-2 text-left text-sm transition-colors duration-150"
                >
