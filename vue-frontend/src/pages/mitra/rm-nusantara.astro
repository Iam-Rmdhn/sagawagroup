        autoplay: {
          delay: 4000,
          disableOnInteraction: false,
          pauseOnMouseEnter: true,
        },
        
        // Touch settings
        grabCursor: true,
        
        // Effects
        effect: 'slide',
        speed: 600,
        
        // Responsive breakpoints
        breakpoints: {
          320: {
            slidesPerView: 1,
