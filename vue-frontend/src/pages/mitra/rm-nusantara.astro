---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';

// Import assets
import kagawaRBLogo from '../../assets/img/logo/logo-kagawacc.png';
import krbGerobak from '../../assets/img/gerobak/kcc.png';
---

<Layout title="Kagawa Rice Bowl - Peluang Mitra">
  <Navbar />
  
  <main class="min-h-screen bg-gradient-to-br from-yellow-50 via-orange-50 to-red-50 overflow-hidden">
    <!-- Decorative Background Elements -->
    <div class="fixed inset-0 overflow-hidden pointer-events-none">
      <div class="absolute -top-40 -right-40 w-80 h-80 bg-orange-200 rounded-full opacity-20 animate-pulse"></div>
      <div class="absolute -bottom-40 -left-40 w-96 h-96 bg-red-200 rounded-full opacity-20 animate-bounce"></div>
      <div class="absolute top-1/3 left-1/4 w-20 h-20 bg-yellow-300 rounded-full opacity-30 animate-ping"></div>
    </div>

    <!-- Main Content Section -->
    <section class="pt-24 pb-16 px-4 relative z-10">
      <div class="container mx-auto max-w-6xl">
        <!-- Floating Badge -->
        <div class="text-center mb-8">
          <div class="inline-flex items-center px-6 py-2 bg-gradient-to-r from-orange-500 to-red-500 text-white rounded-full text-sm font-bold shadow-lg animate-bounce">
            üî• Peluang Emas Franchise Terbatas!
          </div>
        </div>

        <div class="grid lg:grid-cols-2 gap-16 items-start">
          <!-- Left Side - Enhanced Food Cart -->
          <div class="relative group">
            <!-- Glow Effect Behind Cart -->
            <div class="absolute inset-0 bg-gradient-to-r from-orange-400 to-red-400 rounded-3xl blur-2xl opacity-30 group-hover:opacity-50 transition-all duration-500 animate-pulse"></div>
            
            <!-- Cart Container with 3D Effect -->
            <div class="relative bg-white rounded-3xl p-8 shadow-2xl transform hover:scale-105 transition-all duration-500 hover:shadow-3xl">
              <!-- Floating Icons Around Cart -->
              <div class="absolute -top-4 -right-4 w-12 h-12 bg-gradient-to-r from-yellow-400 to-orange-400 rounded-full flex items-center justify-center text-white font-bold text-xl animate-bounce shadow-lg">
                üçú
              </div>
              <div class="absolute -bottom-4 -left-4 w-10 h-10 bg-gradient-to-r from-red-400 to-pink-400 rounded-full flex items-center justify-center text-white text-lg animate-pulse shadow-lg">
                ‚≠ê
              </div>
              
              <!-- Enhanced Cart Image with Overlay -->
              <div class="relative overflow-hidden rounded-2xl">
                <img 
                  src={krbGerobak.src} 
                  alt="Kagawa Rice Bowl Gerobak" 
                  class="w-full h-auto rounded-2xl transform hover:scale-110 transition-all duration-700"
                />
                <!-- Gradient Overlay -->
                <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent rounded-2xl"></div>
                
                <!-- Success Badge on Image -->
                <div class="absolute top-4 left-4 bg-green-500 text-white px-3 py-1 rounded-full text-xs font-bold shadow-lg animate-pulse">
                  ‚úì Proven Success
                </div>
              </div>

              <!-- Floating Stats -->
              <div class="absolute -right-8 top-1/3 bg-white rounded-xl p-4 shadow-xl border-l-4 border-orange-500 transform rotate-3 hover:rotate-0 transition-all duration-300">
                <div class="text-2xl font-bold text-orange-600">500+</div>
                <div class="text-xs text-gray-600">Happy Partners</div>
              </div>
            </div>
          </div>

          <!-- Right Side - Enhanced Content -->
          <div class="space-y-8">
            <!-- Enhanced Header with Animated Elements -->
            <div class="bg-white/90 backdrop-blur-sm rounded-2xl p-8 shadow-xl border border-orange-100 relative overflow-hidden">
              <!-- Animated Background Pattern -->
              <div class="absolute inset-0 opacity-5">
                <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-br from-orange-200 to-red-200 animate-pulse"></div>
              </div>
              
              <div class="relative z-10">
                <div class="flex items-center space-x-4 mb-6">
                  <!-- Enhanced Logo with Glow -->
                  <div class="relative">
                    <div class="absolute inset-0 bg-gradient-to-r from-orange-400 to-red-400 rounded-full blur-lg opacity-50 animate-pulse"></div>
                    <img 
                      src={kagawaRBLogo.src} 
                      alt="Kagawa Rice Bowl Logo" 
                      class="relative w-16 h-16 rounded-full object-contain shadow-lg border-2 border-white hover:scale-110 transition-all duration-300"
                    />
                  </div>
                  
                  <!-- Animated Title -->
                  <div class="flex-1">
                    <h1 class="text-4xl font-bold bg-gradient-to-r from-orange-600 to-red-600 bg-clip-text text-transparent hover:scale-105 transition-all duration-300">
                      KAGAWA RICE BOWL
                    </h1>
                    <div class="text-sm text-gray-500 font-medium">Premium Japanese Fusion Franchise</div>
                  </div>
                </div>

                <!-- Enhanced Description with Highlights -->
                <div class="space-y-4 mb-6">
                  <p class="text-gray-700 leading-relaxed">
                    <span class="font-semibold text-orange-600">Kagawa Rice Bowl</span> menggabungkan kelezatan 
                    <span class="bg-yellow-100 px-1 rounded">autentik Jepang</span> dengan sentuhan unik 
                    <span class="bg-green-100 px-1 rounded">Nusantara</span>, menciptakan sebuah konsep bisnis kuliner yang 
                    <span class="font-semibold text-red-600">kuat dan mudah diterima pasar</span>.
                  </p>
                  
                  <p class="text-gray-600">
                    Dengan menu andalan yang <span class="font-semibold text-orange-600">inovatif</span>, kami tidak hanya 
                    membangun basis pelanggan yang loyal, tetapi juga membuka sebuah 
                    <span class="bg-orange-100 px-1 rounded font-medium">peluang nyata untuk kesuksesan bersama</span> 
                    di industri kuliner yang terus berkembang.
                  </p>
                </div>

                <!-- Enhanced CTA Button with Multiple Effects -->
                <div class="relative group">
                  <div class="absolute inset-0 bg-gradient-to-r from-orange-400 to-red-400 rounded-xl blur-lg opacity-50 group-hover:opacity-75 transition-all duration-300"></div>
                  <button class="relative w-full bg-gradient-to-r from-orange-500 to-red-500 hover:from-orange-600 hover:to-red-600 text-white font-bold py-5 px-6 rounded-xl text-lg shadow-xl transform hover:scale-105 hover:-translate-y-1 transition-all duration-300 overflow-hidden">
                    <!-- Button Animation Background -->
                    <div class="absolute inset-0 bg-gradient-to-r from-white/20 to-transparent transform -skew-x-12 -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
                    
                    <div class="relative flex items-center justify-center space-x-2">
                      <span class="text-2xl animate-bounce">üçú</span>
                      <span>Daftar Jadi Mitra Sekarang</span>
                      <span class="text-xl animate-ping">üöÄ</span>
                    </div>
                  </button>
                </div>

                <!-- Trust Indicators -->
                <div class="grid grid-cols-3 gap-4 mt-6 pt-6 border-t border-gray-200">
                  <div class="text-center">
                    <div class="text-2xl font-bold text-orange-600">24/7</div>
                    <div class="text-xs text-gray-500">Support</div>
                  </div>
                  <div class="text-center">
                    <div class="text-2xl font-bold text-green-600">ROI</div>
                    <div class="text-xs text-gray-500">6-12 Months</div>
                  </div>
                  <div class="text-center">
                    <div class="text-2xl font-bold text-blue-600">100%</div>
                    <div class="text-xs text-gray-500">Halal</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Benefits Section -->
    <section class="py-16 px-4 bg-white">
      <div class="container mx-auto max-w-6xl">
        <h2 class="text-2xl font-bold text-left text-gray-800 mb-8">Mitra Benefit :</h2>
        
        <div class="grid grid-cols-5 gap-4">
          <!-- Benefit 1: Bahan Baku & Peralatan -->
          <div class="bg-gradient-to-br from-orange-100 to-orange-200 rounded-2xl p-6 text-center shadow-md hover:shadow-lg transition-all duration-300">
            <div class="w-12 h-12 mx-auto mb-4 flex items-center justify-center">
              <svg class="w-8 h-8 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M2 12h20"/>
                <path d="M20 12v8a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2v-8"/>
                <path d="m4 8 16-4"/>
                <circle cx="8" cy="8" r="2"/>
                <circle cx="16" cy="8" r="2"/>
              </svg>
            </div>
            <p class="text-xs font-medium text-gray-700 leading-tight">Bahan Baku &<br/>Peralatan</p>
          </div>

          <!-- Benefit 2: Dibantu Untuk Mencari Karyawan -->
          <div class="bg-gradient-to-br from-orange-100 to-orange-200 rounded-2xl p-6 text-center shadow-md hover:shadow-lg transition-all duration-300">
            <div class="w-12 h-12 mx-auto mb-4 flex items-center justify-center">
              <svg class="w-8 h-8 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
            <p class="text-xs font-medium text-gray-700 leading-tight">Dibantu Untuk<br/>Mencari Karyawan</p>
          </div>

          <!-- Benefit 3: SOP & Training -->
          <div class="bg-gradient-to-br from-orange-100 to-orange-200 rounded-2xl p-6 text-center shadow-md hover:shadow-lg transition-all duration-300">
            <div class="w-12 h-12 mx-auto mb-4 flex items-center justify-center">
              <svg class="w-8 h-8 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <p class="text-xs font-medium text-gray-700 leading-tight">SOP & Training</p>
          </div>

          <!-- Benefit 4: Dukungan & Akses ke Jaringan Supplier -->
          <div class="bg-gradient-to-br from-orange-100 to-orange-200 rounded-2xl p-6 text-center shadow-md hover:shadow-lg transition-all duration-300">
            <div class="w-12 h-12 mx-auto mb-4 flex items-center justify-center">
              <svg class="w-8 h-8 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M12 15V9l-4 2v6l4-2z"/>
                <path d="M8 17l4 2 4-2"/>
                <path d="M8 11l4-2 4 2"/>
                <path d="M12 22v-7"/>
                <path d="M12 8V2"/>
              </svg>
            </div>
            <p class="text-xs font-medium text-gray-700 leading-tight">Dukungan & Akses ke<br/>Jaringan Supplier</p>
          </div>

          <!-- Benefit 5: Media & Promosi -->
          <div class="bg-gradient-to-br from-orange-100 to-orange-200 rounded-2xl p-6 text-center shadow-md hover:shadow-lg transition-all duration-300">
            <div class="w-12 h-12 mx-auto mb-4 flex items-center justify-center">
              <svg class="w-8 h-8 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"/>
              </svg>
            </div>
            <p class="text-xs font-medium text-gray-700 leading-tight">Media & Promosi</p>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
