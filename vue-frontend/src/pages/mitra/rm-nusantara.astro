---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';

// Import assets
import rmNusantaraLogo from '../../assets/img/logo/logo-rmw.png';
import rmwImage from '../../assets/img/gerobak/rmw.png';
import warnasImage from '../../assets/img/mall/warnas.png';
import masgawImage from '../../assets/img/mall/masgaw-resto.png';

---

<Layout title="RM Nusantara - Peluang Mitra">
  <Navbar />
  
  <main class="min-h-screen bg-gradient-to-br from-yellow-50 via-orange-50 to-red-50 overflow-hidden">
    <!-- Main Content Section -->
    <section class="pt-24 pb-16 px-4 relative z-10">
      <div class="container mx-auto max-w-6xl">
        <div class="grid lg:grid-cols-2 md:grid-cols-1 gap-8 md:gap-16 items-start">
          <!-- Left Side - Enhanced Food Cart with Slider -->
          <div class="relative group max-w-md mx-auto lg:max-w-full">
            <!-- Glow Effect Behind Cart -->
            <div class="absolute inset-0 bg-gradient-to-r from-orange-400 to-red-400 rounded-3xl blur-2xl opacity-30 group-hover:opacity-50 transition-all duration-500 animate-pulse"></div>
            
            <!-- Cart Container with 3D Effect -->
            <div class="relative bg-white rounded-3xl p-4 sm:p-6 md:p-8 shadow-2xl transform hover:scale-105 transition-all duration-500 hover:shadow-3xl">
              
              <!-- Swiper Slider Container -->
              <div class="relative overflow-hidden rounded-xl sm:rounded-2xl">
                <div class="swiper mySwiper" style="height: 470px;">
                  <div class="swiper-wrapper">
                    <!-- Slide 1: RM Mall -->
                    <div class="swiper-slide">
                      <img 
                        src={rmwImage.src} 
                        alt="RM Nusantara Mall" 
                        class="w-full h-full object-cover rounded-xl sm:rounded-2xl"
                        style="min-height: 470px;"
                      />
                    </div>
                    
                    <!-- Slide 2: Warnas Mall -->
                    <div class="swiper-slide">
                      <img 
                        src={warnasImage.src} 
                        alt="Warnas Mall" 
                        class="w-full h-full object-cover rounded-xl sm:rounded-2xl"
                        style="min-height: 400px;"
                      />
                    </div>
                    
                    <!-- Slide 3: Masgaw Mall -->
                    <div class="swiper-slide">
                      <img 
                        src={masgawImage.src} 
                        alt="Masgaw Mall Restaurant" 
                        class="w-full h-full object-cover rounded-xl sm:rounded-2xl"
                        style="min-height: 400px;"
                      />
                    </div>
                  </div>
                  
                  <!-- Add Pagination -->
                  <div class="swiper-pagination"></div>
                </div>
              </div>

              <!-- Floating Stats -->
              <div class="absolute -right-8 sm:-right-9 top-1 bg-white rounded-lg sm:rounded-xl p-2 sm:p-4 shadow-xl border-l-4 border-orange-500 transform rotate-3 hover:rotate-0 transition-all duration-300 text-center z-10">
                <div class="text-xl sm:text-2xl font-bold text-orange-600">Rp. 89.000.000</div>
              </div>
            </div>
          </div>

          <!-- Right Side - Enhanced Content -->
          <div class="space-y-6 sm:space-y-8">
            <!-- Enhanced Header with Animated Elements -->
            <div class="bg-white/90 backdrop-blur-sm rounded-2xl p-4 sm:p-6 md:p-8 shadow-xl border border-orange-100 relative overflow-hidden">
              <!-- Animated Background Pattern -->
              <div class="absolute inset-0 opacity-5">
                <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-br from-orange-200 to-red-200 animate-pulse"></div>
              </div>
              
              <div class="relative z-10">
                <div class="flex flex-col sm:flex-row sm:items-center space-y-4 sm:space-y-0 sm:space-x-4 mb-4 sm:mb-6">
                  <!-- Enhanced Logo with Glow -->
                  <div class="relative mx-auto sm:mx-0">
                    <div class="absolute inset-0 bg-gradient-to-r from-orange-400 to-red-400 rounded-full blur-lg opacity-50 animate-pulse"></div>
                    <img 
                      src={rmNusantaraLogo.src} 
                      alt="RM Nusantara Logo" 
                      class="relative w-14 h-14 sm:w-16 sm:h-16 rounded-full object-contain shadow-lg border-2 border-white hover:scale-110 transition-all duration-300"
                    />
                  </div>
                  
                  <!-- Animated Title -->
                  <div class="flex-1 text-center sm:text-left">
                    <h1 class="text-3xl sm:text-4xl font-bold bg-gradient-to-r from-orange-600 to-red-600 bg-clip-text text-transparent hover:scale-105 transition-all duration-300">
                      RM NUSANTARA
                    </h1>
                    <div class="text-sm text-gray-500 font-medium">Authentic Indonesian Restaurant</div>
                  </div>
                </div>

                <!-- Enhanced Description with Highlights -->
                <div class="space-y-3 sm:space-y-4 mb-4 sm:mb-6 text-sm sm:text-base">
                  <p class="text-gray-700 leading-relaxed">
                    <span class="font-semibold text-orange-600">RM Nusantara</span> menawarkan kelezatan 
                    <span class="bg-yellow-100 px-1 rounded">otentik Indonesia</span> dengan berbagai 
                    <span class="bg-green-100 px-1 rounded">masakan daerah</span>, menciptakan sebuah konsep bisnis kuliner yang 
                    <span class="font-semibold text-red-600">melestarikan kekayaan kuliner nusantara</span>.
                  </p>
                  
                  <p class="text-gray-600">
                    Dengan menu andalan yang <span class="font-semibold text-orange-600">bervariasi</span>, kami tidak hanya 
                    memperkenalkan cita rasa lokal, tetapi juga membuka sebuah 
                    <span class="bg-orange-100 px-1 rounded font-medium">peluang nyata untuk kesuksesan bersama</span> 
                    di industri kuliner yang terus berkembang.
                  </p>
                </div>

                <!-- Enhanced CTA Button with Multiple Effects -->
                <div class="relative group">
                  <div class="absolute inset-0 bg-gradient-to-r from-orange-400 to-red-400 rounded-xl blur-lg opacity-50 group-hover:opacity-75 transition-all duration-300"></div>
                  <a href="/form?paket=RM%20Nusantara" class="relative w-full bg-gradient-to-r from-orange-500 to-red-500 hover:from-orange-600 hover:to-red-600 text-white font-bold py-3 sm:py-5 px-4 sm:px-6 rounded-xl text-base sm:text-lg shadow-xl transform hover:scale-105 hover:-translate-y-1 transition-all duration-300 overflow-hidden block">
                    <!-- Button Animation Background -->
                    <div class="absolute inset-0 bg-gradient-to-r from-white/20 to-transparent transform -skew-x-12 -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
                    
                    <div class="relative flex items-center justify-center space-x-2">
                      <span>Daftar Jadi Mitra Sekarang</span>
                    </div>
                  </a>
                </div>

                <!-- Trust Indicators -->
                <div class="grid grid-cols-3 gap-2 sm:gap-4 mt-4 pt-4 sm:mt-6 sm:pt-6 border-t border-gray-200 text-center">
                  <div>
                    <div class="text-xl sm:text-2xl font-bold text-orange-600">24/7</div>
                    <div class="text-xxs sm:text-xs text-gray-500">Support</div>
                  </div>
                  <div>
                    <div class="text-xl sm:text-2xl font-bold text-green-600">ROI</div>
                    <div class="text-xxs sm:text-xs text-gray-500">6-12 Months</div>
                  </div>
                  <div>
                    <div class="text-xl sm:text-2xl font-bold text-blue-600">100%</div>
                    <div class="text-xxs sm:text-xs text-gray-500">Halal</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Benefits Section -->
    <section class="py-10 sm:py-16 px-4 bg-white">
      <div class="container mx-auto max-w-6xl">
        <h2 class="text-xl sm:text-2xl font-bold text-left text-gray-800 mb-6 sm:mb-8">Mitra Benefit :</h2>
        
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-5 gap-3 sm:gap-4">
          <!-- Benefit 1: Bahan Baku & Peralatan -->
          <div class="bg-gradient-to-br from-orange-100 to-orange-200 rounded-xl sm:rounded-2xl p-4 sm:p-6 text-center shadow-md hover:shadow-lg transition-all duration-300">
            <div class="w-10 h-10 sm:w-12 sm:h-12 mx-auto mb-2 sm:mb-4 flex items-center justify-center">
              <!-- Box icon -->
              <svg class="w-6 h-6 sm:w-8 sm:h-8 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="m7.5 4.27 9 5.15"/>
                <path d="M21 8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16Z"/>
                <path d="m3.3 7 8.7 5 8.7-5"/>
                <path d="M12 22V12"/>
              </svg>
            </div>
            <p class="text-xs font-medium text-gray-700 leading-tight">Bahan Baku &<br/>Peralatan</p>
          </div>

          <!-- Benefit 2: Dibantu Untuk Mencari Karyawan -->
          <div class="bg-gradient-to-br from-orange-100 to-orange-200 rounded-xl sm:rounded-2xl p-4 sm:p-6 text-center shadow-md hover:shadow-lg transition-all duration-300">
            <div class="w-10 h-10 sm:w-12 sm:h-12 mx-auto mb-2 sm:mb-4 flex items-center justify-center">
              <svg class="w-6 h-6 sm:w-8 sm:h-8 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
            <p class="text-xs font-medium text-gray-700 leading-tight">Dibantu Untuk<br/>Mencari Karyawan</p>
          </div>

          <!-- Benefit 3: SOP & Training -->
          <div class="bg-gradient-to-br from-orange-100 to-orange-200 rounded-xl sm:rounded-2xl p-4 sm:p-6 text-center shadow-md hover:shadow-lg transition-all duration-300">
            <div class="w-10 h-10 sm:w-12 sm:h-12 mx-auto mb-2 sm:mb-4 flex items-center justify-center">
              <svg class="w-6 h-6 sm:w-8 sm:h-8 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <p class="text-xs font-medium text-gray-700 leading-tight">SOP & Training</p>
          </div>

          <!-- Benefit 4: Dukungan & Akses ke Jaringan Supplier -->
          <div class="bg-gradient-to-br from-orange-100 to-orange-200 rounded-xl sm:rounded-2xl p-4 sm:p-6 text-center shadow-md hover:shadow-lg transition-all duration-300">
            <div class="w-10 h-10 sm:w-12 sm:h-12 mx-auto mb-2 sm:mb-4 flex items-center justify-center">
              <svg class="w-6 h-6 sm:w-8 sm:h-8 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="1" y="3" width="15" height="13"></rect>
                <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon>
                <circle cx="5.5" cy="18.5" r="2.5"></circle>
                <circle cx="18.5" cy="18.5" r="2.5"></circle>
              </svg>
            </div>
            <p class="text-xs font-medium text-gray-700 leading-tight">Dukungan & Akses ke<br/>Jaringan Supplier</p>
          </div>

          <!-- Benefit 5: Media & Promosi -->
          <div class="bg-gradient-to-br from-orange-100 to-orange-200 rounded-xl sm:rounded-2xl p-4 sm:p-6 text-center shadow-md hover:shadow-lg transition-all duration-300">
            <div class="w-10 h-10 sm:w-12 sm:h-12 mx-auto mb-2 sm:mb-4 flex items-center justify-center">
              <svg class="w-6 h-6 sm:w-8 sm:h-8 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"/>
              </svg>
            </div>
            <p class="text-xs font-medium text-gray-700 leading-tight">Media & Promosi</p>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  /* Swiper styles */
  .mySwiper {
    width: 100%;
    height: 400px;
  }
  
  .swiper-slide {
    text-align: center;
    font-size: 18px;
    background: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .swiper-slide img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  /* Custom navigation button styles */
  .swiper-button-next,
  .swiper-button-prev {
    color: white !important;
    background: rgba(0, 0, 0, 0.5) !important;
    width: 40px !important;
    height: 40px !important;
    margin-top: -20px !important;
    border-radius: 50% !important;
    backdrop-filter: blur(10px) !important;
  }
  
  .swiper-button-next:hover,
  .swiper-button-prev:hover {
    background: rgba(0, 0, 0, 0.8) !important;
    transform: scale(1.1) !important;
  }
  
  .swiper-button-next:after,
  .swiper-button-prev:after {
    font-size: 16px !important;
  }
  
  /* Custom pagination styles - Override Swiper defaults */
  .swiper-pagination .swiper-pagination-bullet {
    width: 24px !important;
    height: 8px !important;
    border-radius: 4px !important;
    background: rgba(252, 211, 77, 0.6) !important;
    opacity: 1 !important;
    margin: 0 4px !important;
    transition: all 0.3s ease !important;
    display: inline-block !important;
  }
  
  .swiper-pagination .swiper-pagination-bullet-active {
    background: #fbbf24 !important;
    transform: scale(1.2) !important;
    box-shadow: 0 2px 8px rgba(251, 191, 36, 0.4) !important;
  }

  /* More specific overrides */
  .swiper.mySwiper .swiper-pagination-bullet {
    width: 24px !important;
    height: 8px !important;
    border-radius: 4px !important;
    background-color: rgba(252, 211, 77, 0.6) !important;
    opacity: 1 !important;
    margin: 0 4px !important;
  }

  .swiper.mySwiper .swiper-pagination-bullet-active {
    background-color: #fbbf24 !important;
    transform: scale(1.2) !important;
    box-shadow: 0 2px 8px rgba(251, 191, 36, 0.4) !important;
  }
</style>

<script>
  // Import Swiper and modules
  import Swiper from 'swiper';
  import { Navigation, Pagination, Autoplay } from 'swiper/modules';

  // Import Swiper styles
  import 'swiper/css';
  import 'swiper/css/navigation';
  import 'swiper/css/pagination';

  document.addEventListener('DOMContentLoaded', function() {
    console.log('Initializing Swiper...');
    
    // Initialize Swiper
    const swiper = new Swiper('.mySwiper', {
      // Configure modules
      modules: [Navigation, Pagination, Autoplay],
      
      // Basic settings
      slidesPerView: 1,
      spaceBetween: 30,
      loop: true,
      
      // Pagination
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
        bulletClass: 'swiper-pagination-bullet',
        bulletActiveClass: 'swiper-pagination-bullet-active',
        renderBullet: function (index, className) {
          return '<span class="' + className + '" style="width: 24px !important; height: 8px !important; border-radius: 4px !important; background: rgba(252, 211, 77, 0.6) !important; display: inline-block !important; margin: 0 4px !important; transition: all 0.3s ease !important;"></span>';
        },
      },
      
      // Navigation arrows
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      
      // Autoplay
      autoplay: {
        delay: 3000,
        disableOnInteraction: false,
        pauseOnMouseEnter: true,
      },
      
      // Effects
      effect: 'slide',
      speed: 600,
      
      // Responsive breakpoints
      breakpoints: {
        640: {
          slidesPerView: 1,
          spaceBetween: 20,
        },
        768: {
          slidesPerView: 1,
          spaceBetween: 30,
        },
        1024: {
          slidesPerView: 1,
          spaceBetween: 30,
        },
      },
      
      // Events
      on: {
        init: function () {
          console.log('Swiper initialized successfully');
          // Force apply custom pagination styles
          setTimeout(() => {
            const bullets = document.querySelectorAll('.swiper-pagination-bullet');
            bullets.forEach(bullet => {
              const htmlBullet = bullet as HTMLElement;
              htmlBullet.style.width = '24px';
              htmlBullet.style.height = '8px';
              htmlBullet.style.borderRadius = '4px';
              htmlBullet.style.background = 'rgba(252, 211, 77, 0.6)';
              htmlBullet.style.margin = '0 4px';
              htmlBullet.style.transition = 'all 0.3s ease';
            });
            
            const activeBullet = document.querySelector('.swiper-pagination-bullet-active') as HTMLElement;
            if (activeBullet) {
              activeBullet.style.background = '#fbbf24';
              activeBullet.style.transform = 'scale(1.2)';
              activeBullet.style.boxShadow = '0 2px 8px rgba(251, 191, 36, 0.4)';
            }
          }, 100);
        },
        slideChange: function (swiper) {
          console.log('Slide changed to:', swiper.activeIndex);
          // Re-apply styles on slide change
          setTimeout(() => {
            const bullets = document.querySelectorAll('.swiper-pagination-bullet');
            bullets.forEach(bullet => {
              const htmlBullet = bullet as HTMLElement;
              htmlBullet.style.width = '24px';
              htmlBullet.style.height = '8px';
              htmlBullet.style.borderRadius = '4px';
              htmlBullet.style.background = 'rgba(252, 211, 77, 0.6)';
              htmlBullet.style.margin = '0 4px';
              htmlBullet.style.transition = 'all 0.3s ease';
            });
            
            const activeBullet = document.querySelector('.swiper-pagination-bullet-active') as HTMLElement;
            if (activeBullet) {
              activeBullet.style.background = '#fbbf24';
              activeBullet.style.transform = 'scale(1.2)';
              activeBullet.style.boxShadow = '0 2px 8px rgba(251, 191, 36, 0.4)';
            }
          }, 50);
        },
      },
    });
    
    console.log('Swiper instance created:', swiper);
  });
</script>
