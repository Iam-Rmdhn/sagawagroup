<Layout title="RM Nusantara - Peluang Mitra">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
  <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js" is:inline></script>
  <Navbar />
  
  <main class="min-h-screen bg-white overflow-hidden">
    <!-- Main Content Section -->
    <section class="pt-10 sm:pt-20 md:pt-10 pb-12 sm:pb-16 px-3 sm:px-4 md:px-6 relative z-10">
      <div class="container mx-auto max-w-6xl">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 sm:gap-8 lg:gap-16 items-start">
          <!-- Left Side - Enhanced Food Cart with Slider -->
          <div class="relative group w-full max-w-lg mx-auto lg:max-w-full">
            <!-- Glow Effect Behind Cart -->
            <div class="absolute inset-0 bg-gradient-to-r from-orange-400 to-amber-500 rounded-2xl sm:rounded-3xl blur-2xl opacity-30 group-hover:opacity-50 transition-all duration-500 animate-pulse"></div>
            
            <!-- Cart Container with 3D Effect -->
            <div class="relative bg-white rounded-2xl sm:rounded-3xl p-3 sm:p-4 md:p-6 lg:p-8 shadow-2xl">
              
              <!-- Swiper Slider Container -->
              <div class="relative overflow-hidden rounded-lg sm:rounded-xl md:rounded-2xl">
                <div class="swiper mySwiper">
                  <div class="swiper-wrapper">
                    <!-- Slide 1: RM Mall -->
                    <div class="swiper-slide">
                      <img 
                        src={rmwImage.src} 
                        alt="RM Nusantara Mall" 
                        class="w-full h-full object-cover rounded-lg sm:rounded-xl md:rounded-2xl"
                      />
                    </div>
                    
                    <!-- Slide 2: Warnas Mall -->
                    <div class="swiper-slide">
                      <img 
                        src={warnasImage.src} 
                        alt="Warnas Mall" 
                        class="w-full h-full object-cover rounded-lg sm:rounded-xl md:rounded-2xl"
                      />
                    </div>
                    
                    <!-- Slide 3: Masgaw Mall -->
                    <div class="swiper-slide">
                      <img 
                        src={masgawImage.src} 
                        alt="Masgaw Mall Restaurant" 
                        class="w-full h-full object-cover rounded-lg sm:rounded-xl md:rounded-2xl"
                      />
                    </div>
                  </div>
                  
                  <!-- Add Navigation -->
                  <div class="swiper-button-next"></div>
                  <div class="swiper-button-prev"></div>
                  
                  <!-- Add Pagination -->
                  <div class="swiper-pagination"></div>
                </div>
              </div>

              <!-- Floating Stats -->
              <div class="absolute -right-3 sm:-right-6 md:-right-8 lg:-right-9 top-6 sm:top-8 md:top-10 bg-white rounded-lg sm:rounded-xl p-2 sm:p-3 md:p-4 shadow-xl border-l-4 border-green-500 transform rotate-3 hover:rotate-0 transition-all duration-300 text-center z-10">
                <div class="text-sm sm:text-lg md:text-xl lg:text-2xl font-bold text-green-600">Rp. 89.000.000</div>
              </div>
            </div>
          </div>

          <!-- Right Side - Enhanced Content -->
          <div class="space-y-4 sm:space-y-6 md:space-y-8">
            <!-- Enhanced Header with Animated Elements -->
            <div class="bg-white/90 backdrop-blur-sm rounded-xl sm:rounded-2xl p-3 sm:p-4 md:p-6 lg:p-8 shadow-xl border border-orange-100 relative overflow-hidden">
