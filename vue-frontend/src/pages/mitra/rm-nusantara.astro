---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';

// Import assets
import rmNusantaraLogo from '../../assets/img/logo/logo-rmw.png';
import rmwImage from '../../assets/img/mall/rmmal.png';
import warnasImage from '../../assets/img/mall/warnas.png';
import masgawImage from '../../assets/img/mall/masgaw-resto.png';
import comingSoon from '../../assets/img/coming-soon.jpg';

