---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';

// Import assets
import masgawLogo from '../../assets/img/logo/logo-busdev.jpg';
import kbdImage from '../../assets/img/gerobak/indepandent_brand.jpg';
import comingSoon from '../../assets/img/coming-soon.jpg';
---

<Layout title="Independent Brand - Peluang Mitra">
  <Navbar />
  
  <main class="min-h-screen bg-white overflow-hidden">
    <!-- Main Content Section -->
    <section class="pt-10 pb-16 px-4 relative z-10">
      <div class="container mx-auto max-w-6xl">
        <div class="grid lg:grid-cols-2 md:grid-cols-1 gap-8 md:gap-16 items-start">
          <!-- Left Side - Enhanced Food Cart -->
          <div class="relative group max-w-md mx-auto lg:max-w-full">
            <!-- Glow Effect Behind Cart -->
            <div class="absolute inset-0 bg-gradient-to-r from-orange-400 to-amber-500 rounded-3xl blur-2xl opacity-30 group-hover:opacity-50 transition-all duration-500 animate-pulse"></div>
            
            <!-- Cart Container with 3D Effect -->
            <div class="relative bg-white rounded-3xl p-4 sm:p-6 md:p-8 shadow-2xl">
              
              <!-- Enhanced Cart Image with Overlay -->
              <div class="relative overflow-hidden rounded-xl sm:rounded-2xl">
