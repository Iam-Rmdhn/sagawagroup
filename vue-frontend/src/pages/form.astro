  const textInputs = [
    { id: 'namaMitra', sanitizer: InputSanitizer.sanitizeName, label: 'Nama Mitra' },
    { id: 'alamatMitra', sanitizer: InputSanitizer.sanitizeAddress, label: 'Alamat Mitra' },
