                        pattern="[0-9]{10,15}"
                        required
                     />
                  </div>

                  <!-- Alamat -->
                  <div>
                     <label for="alamatMitra" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        Alamat *
