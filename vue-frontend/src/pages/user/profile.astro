                  <!-- Action Buttons -->
                  <div class="flex flex-col sm:flex-row gap-4 pt-6">
                     <button 
                        type="submit" 
                        id="save-btn"
                        class="flex-1 bg-amber-500 hover:bg-amber-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-200 flex items-center justify-center"
                     >
                        <span id="save-text">Simpan Perubahan</span>
                        <span id="save-loading" class="hidden">
