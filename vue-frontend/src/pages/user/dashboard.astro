            <!-- Financial Summary Cards -->
            <div id="financial-summary-cards" class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
               <!-- Omset Harian -->
               <div class="modern-card rounded-2xl p-6 shadow-lg overflow-hidden relative">
