  <!-- Authentication Protection Script -->
  <script>
    // Cek apakah user sudah login
    if (typeof window !== 'undefined') {
      const token = localStorage.getItem('mitraToken');
      const user = localStorage.getItem('mitraUser');
      
      if (!token || !user) {
