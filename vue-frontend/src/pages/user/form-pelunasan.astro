---
import Layout from '../../layouts/Layout.astro';
import sagawaLogo from '../../assets/img/logo_s.svg?url';
---

<Layout title="Form Pelunasan Kewajiban">
  <div id="formPelunasanContainer">
<script type="module">
  document.addEventListener('DOMContentLoaded', async () => {
    let API_URL = 'http://localhost:4000';
    try {
      if (typeof import.meta !== 'undefined' && import.meta.env && import.meta.env.PUBLIC_API_URL) {
        if (import.meta.env.PUBLIC_API_URL && import.meta.env.PUBLIC_API_URL.startsWith('http')) {
          API_URL = import.meta.env.PUBLIC_API_URL;
        }
      }
    } catch (e) { /* fallback to localhost */ }
    const email = localStorage.getItem('mitraUserEmail') || localStorage.getItem('email');
    if (email) {
      try {
        const res = await fetch(`${API_URL}/api/mitra/pelunasan-exists?email=${encodeURIComponent(email)}`);
        const data = await res.json();
        if (data.exists) {
          window.location.href = '/user/kewajiban';
          return;
        }
      } catch (e) { /* ignore, biarkan user tetap bisa akses jika error */ }
    }
  });
</script>
<style>
  input[disabled], input[readonly] {
    cursor: not-allowed !important;
    border-color: #9ca3af !important; /* Tailwind red-500 */
    background-color: #f3f4f6 !important; /* Tailwind gray-100 */
    color: #9ca3af !important; /* Tailwind gray-400 */
  }
</style>
  <div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white rounded-lg shadow-lg p-8">
        <div class="flex items-center gap-3 mb-6">
          <img src={sagawaLogo} alt="Sagawa Logo" class="h-11 w-11" />
          <h2 class="text-2xl font-bold text-gray-800">Form Pelunasan Kewajiban</h2>
        </div>
        <!-- Info pembayaran -->
        <div class="bg-gray-50 rounded-lg p-4 mb-6">
          <p class="text-sm text-gray-700 mb-2">Pembayaran dapat dilakukan melalui rekening:</p>
          <div class="space-y-1">
            <p class="font-semibold text-red-600">A.N Iman Wahyudi (OWNER)</p>
            <p class="font-semibold text-red-600">Bank Central Asia (BCA)</p>
            <p class="font-semibold text-red-600">No. Rekening: 540-607-5938</p>
            <p class="text-xs text-gray-600">*Sebelum melakukan transfer, pastikan bahwa nominal yang dibayarkan tidak salah</p>
            <p class="text-xs text-red-600">(Sertakan bukti transfer)</p>
          </div>
        </div>
        <form id="formPelunasan" class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
            <div>
              <label for="namaMitra" class="block text-gray-700 font-medium mb-1">Nama Mitra</label>
              <input id="namaMitra" name="namaMitra" type="text" class="w-full px-4 py-3 border border-gray-300 rounded-xl bg-gray-100 text-gray-500 placeholder-gray-400 text-base" placeholder="Nama Mitra*" readonly disabled />
            </div>
            <div>
              <label for="alamatMitra" class="block text-gray-700 font-medium mb-1">Alamat Mitra</label>
              <input id="alamatMitra" name="alamatMitra" type="text" class="w-full px-4 py-3 border border-gray-300 rounded-xl bg-gray-100 text-gray-500 placeholder-gray-400 text-base" placeholder="Alamat Mitra*" readonly disabled />
            </div>
            <div>
              <label for="noHp" class="block text-gray-700 font-medium mb-1">No HP</label>
              <input id="noHp" name="noHp" type="text" class="w-full px-4 py-3 border border-gray-300 rounded-xl bg-gray-100 text-gray-500 placeholder-gray-400 text-base" placeholder="No HP*" readonly disabled />
            </div>
            <div>
              <label for="email" class="block text-gray-700 font-medium mb-1">Email</label>
              <input id="email" name="email" type="email" class="w-full px-4 py-3 border border-gray-300 rounded-xl bg-gray-100 text-gray-500 placeholder-gray-400 text-base" placeholder="Email*" readonly disabled />
            </div>
            <div>
              <label for="paketUsaha" class="block text-gray-700 font-medium mb-1">Kemitraan</label>
              <input id="paketUsaha" name="paketUsaha" type="text" class="w-full px-4 py-3 border border-gray-300 rounded-xl bg-gray-100 text-gray-500 placeholder-gray-400 text-base" placeholder="Kemitraan*" readonly disabled />
            </div>
            <div>
              <label for="nominalPelunasan" class="block text-gray-700 font-medium mb-1">Nominal Pelunasan</label>
              <input id="nominalPelunasan" name="nominalPelunasan" type="number" class="w-full px-4 py-3 border border-gray-300 rounded-xl bg-gray-100 text-gray-500 placeholder-gray-400 text-base" placeholder="Nominal Pelunasan*" required readonly disabled />
            </div>
          </div>
          <div class="mb-8">
            <div id="buktiTransferUploadArea" class="border-2 border-dashed border-gray-300 rounded-2xl p-8 text-center transition-all duration-200 hover:border-blue-400 hover:bg-blue-50/30">
              <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
              </svg>
              <div class="font-semibold text-lg text-gray-700 mb-1">Upload Bukti Transfer</div>
              <div class="text-gray-500 text-sm mb-1">JPG, PNG, atau PDF</div>
              <div class="text-gray-400 text-xs mb-4">Maksimal 2MB</div>
              <input id="buktiTransfer" name="buktiTransfer" type="file" accept="image/*,application/pdf" class="hidden" required />
              <button type="button" id="buktiTransferUploadBtn" class="mt-2 px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 font-semibold flex items-center justify-center mx-auto">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
                Pilih File Bukti Transfer
              </button>
              <div id="buktiTransferPreview" class="mt-2 text-xs text-gray-500"></div>
            </div>
          </div>
          <div class="mt-8">
            <div class="flex items-center mb-2">
              <h3 class="text-lg font-semibold text-gray-800 mr-2">Sumber Dana</h3>
              <span class="text-gray-400" title="Informasi rekening pengirim dana kemitraan"><svg class="w-4 h-4 inline" fill="none" stroke="currentColor" viewBox="0 0 20 20"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" /></svg></span>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <input type="text" id="namaPengirim" name="namaPengirim" placeholder="Nama Pengirim*" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" required />
              <input type="text" id="noRekPengirim" name="noRekPengirim" placeholder="No Rek pengirim*" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" required />
              <input type="text" id="bankPengirim" name="bankPengirim" placeholder="Bank Pengirim*" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent md:col-span-2" required />
            </div>
          </div>
          <button id="btnKirimPelunasan" type="submit" class="w-full py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-semibold disabled:bg-gray-400 disabled:cursor-not-allowed" disabled>Kirim Pelunasan</button>
        </form>
        <div id="formPelunasanMsg" class="mt-4 text-center text-sm"></div>
      </div>
    </div>
  </div>
</Layout>

<script type="module">
  document.addEventListener('DOMContentLoaded', async () => {
    // Aktifkan tombol upload file
    document.getElementById('buktiTransferUploadBtn').addEventListener('click', function() {
      document.getElementById('buktiTransfer').click();
    });
    const API_URL = (typeof import.meta !== 'undefined' && import.meta.env && import.meta.env.PUBLIC_API_URL)
      ? import.meta.env.PUBLIC_API_URL
      : 'http://localhost:4000';
    const email = localStorage.getItem('mitraUserEmail') || localStorage.getItem('email');
    const msg = document.getElementById('formPelunasanMsg');
    if (!email) {
      msg.textContent = 'Email login tidak ditemukan. Silakan login ulang.';
      msg.className = 'text-red-600 mt-4 text-center';
      return;
    }
    try {
      const res = await fetch(`${API_URL}/api/mitra/by-email?email=${encodeURIComponent(email)}`);
      const data = await res.json();
      if (!res.ok || data.error) {
        msg.textContent = 'Data mitra tidak ditemukan. Silakan login ulang.';
        msg.className = 'text-red-600 mt-4 text-center';
        return;
      }
      document.getElementById('namaMitra').value = data.namaMitra || '';
      document.getElementById('email').value = data.email || '';
      document.getElementById('alamatMitra').value = data.alamatMitra || '';
      document.getElementById('noHp').value = data.noHp || '';
      document.getElementById('paketUsaha').value = data.paketUsaha || '';
      // Set nominal pelunasan otomatis dari kekurangan
      const nominalPelunasan = document.getElementById('nominalPelunasan');
      if (data.kekurangan && typeof data.kekurangan === 'number') {
        nominalPelunasan.value = data.kekurangan;
        nominalPelunasan.readOnly = true;
      } else {
        nominalPelunasan.value = '';
        nominalPelunasan.readOnly = false;
      }
    } catch (e) {
      msg.textContent = 'Gagal mengambil data mitra.';
      msg.className = 'text-red-600 mt-4 text-center';
      return;
    }
    // Preview dan validasi file bukti transfer (max 2MB)
    const buktiInput = document.getElementById('buktiTransfer');
    const buktiPreview = document.getElementById('buktiTransferPreview');
    const btnKirim = document.getElementById('btnKirimPelunasan');
    function updateBtnKirimState() {
      const file = buktiInput.files[0];
      if (file && file.size <= 2 * 1024 * 1024) {
        btnKirim.disabled = false;
      } else {
        btnKirim.disabled = true;
      }
    }
    buktiInput.addEventListener('change', function() {
      buktiPreview.innerHTML = '';
      const file = this.files[0];
      if (file) {
        if (file.size > 2 * 1024 * 1024) {
          buktiPreview.textContent = 'Ukuran file maksimal 2MB!';
          buktiInput.value = '';
          updateBtnKirimState();
        } else {
          // Buat preview file dengan ikon, nama, size, dan tombol hapus
          const wrapper = document.createElement('div');
          wrapper.className = 'flex items-center bg-gray-50 rounded-xl px-4 py-3 mt-2 shadow-sm';

          // Ikon file
          const icon = document.createElement('span');
          icon.innerHTML = `<svg class="w-7 h-7 text-green-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><rect x="4" y="4" width="16" height="16" rx="3" fill="#ECFDF5"/><path d="M9 12h6M9 16h6M9 8h6" stroke="#10B981" stroke-width="2" stroke-linecap="round"/></svg>`;
          wrapper.appendChild(icon);

          // Info nama dan size
          const info = document.createElement('div');
          info.className = 'flex-1';
          info.innerHTML = `<div class="font-medium text-gray-900">${file.name}</div><div class="text-xs text-gray-500">${(file.size/1024).toFixed(2)} KB</div>`;
          wrapper.appendChild(info);

          // Tombol hapus
          const removeBtn = document.createElement('button');
          removeBtn.type = 'button';
          removeBtn.className = 'ml-4 text-red-500 hover:text-red-700 text-lg font-bold focus:outline-none';
          removeBtn.innerHTML = '&times;';
          removeBtn.title = 'Hapus file';
          removeBtn.onclick = function() {
            buktiInput.value = '';
            buktiPreview.innerHTML = '';
            updateBtnKirimState();
          };
          wrapper.appendChild(removeBtn);

          buktiPreview.appendChild(wrapper);
          updateBtnKirimState();
        }
      } else {
        updateBtnKirimState();
      }
    });
    // Inisialisasi tombol disabled saat load
    updateBtnKirimState();

    document.getElementById('formPelunasan').addEventListener('submit', async (e) => {
      e.preventDefault();
      msg.textContent = '';
      const form = e.target;
      const formData = new FormData(form);
      // Validasi file sekali lagi sebelum submit
      const file = buktiInput.files[0];
      if (!file || file.size > 2 * 1024 * 1024) {
        msg.textContent = 'Ukuran file bukti transfer maksimal 2MB!';
        msg.className = 'text-red-600 mt-4 text-center';
        return;
      }
      try {
        const res = await fetch(`${API_URL}/api/mitra/pelunasan`, {
          method: 'POST',
          body: formData
        });
        const result = await res.json();
        if (res.ok && result.success) {
          // Set flag di localStorage bahwa sudah pernah submit pelunasan
          localStorage.setItem('sudahPelunasan', '1');
          document.getElementById('formPelunasanContainer').innerHTML = `
            <div class='min-h-[300px] flex flex-col items-center justify-center py-16'>
              <svg class='w-16 h-16 text-green-500 mb-6' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
                <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M9 12l2 2l4-4m5 2a9 9 0 11-18 0a9 9 0 0118 0z' />
              </svg>
              <h2 class='text-3xl font-bold text-gray-800 mb-2 text-center'>Terima Kasih!</h2>
              <p class='text-gray-700 text-lg text-center mb-2'>Formulir pelunasan berhasil dikirim.</p>
              <p class='text-gray-500 text-center text-sm'>Tim kami akan memproses pelunasan Anda dalam 1-2 hari kerja.</p>
            </div>
          `;
          setTimeout(() => { window.location.href = '/user/kewajiban'; }, 2000);
        } else {
          msg.textContent = result.error || 'Gagal mengirim pelunasan.';
          msg.className = 'text-red-600 mt-4 text-center';
        }
      } catch (err) {
        msg.textContent = 'Gagal mengirim pelunasan.';
        msg.className = 'text-red-600 mt-4 text-center';
      }
    });
  });
</script>
