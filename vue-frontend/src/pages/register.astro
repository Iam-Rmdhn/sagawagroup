---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Register">
  <main class="min-h-screen flex items-center justify-center bg-gradient-to-br from-amber-100 to-orange-100">
    <div class="w-full max-w-lg bg-white rounded-2xl shadow-2xl p-8 sm:p-10 flex flex-col gap-6 animate-fade-in-up">
      <h1 class="text-2xl font-bold text-center text-amber-600 mb-2">Register</h1>
      <!-- Step 1: Input Email, No Telp, Country -->
      <form class="flex flex-col gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
          <input type="email" placeholder="Email" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-amber-500 transition" required />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">No. Telp</label>
          <div class="flex gap-2">
            <select class="px-2 py-2 rounded-lg border border-gray-300 bg-gray-50 focus:outline-none focus:ring-2 focus:ring-amber-500">
              <option value="ID">+62 (ID)</option>
              <option value="MY">+60 (MY)</option>
              <option value="SG">+65 (SG)</option>
              <option value="TH">+66 (TH)</option>
              <option value="US">+1 (US)</option>
              <option value="JP">+81 (JP)</option>
            </select>
            <input type="tel" placeholder="No. Telp" class="flex-1 px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-amber-500 transition" required />
          </div>
        </div>
        <!-- Step 2: OTP Verification -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Verifikasi OTP Email</label>
          <input type="text" placeholder="Kode OTP Email" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-amber-500 transition" required />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Verifikasi OTP No. Telp</label>
          <input type="text" placeholder="Kode OTP No. Telp" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-amber-500 transition" required />
        </div>
        <!-- Step 3: Nama -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Nama</label>
          <input type="text" placeholder="Nama Lengkap" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-amber-500 transition" required />
        </div>
        <button type="submit" class="w-full py-2 bg-gradient-to-r from-amber-500 to-orange-500 text-white font-semibold rounded-lg shadow-lg hover:scale-105 transition">Register</button>
      </form>
      <div class="text-center text-sm text-gray-600 mt-2">
        Sudah punya akun?
        <a href="/login" class="text-amber-600 font-semibold hover:underline">Login</a>
      </div>
    </div>
  </main>
</Layout>
