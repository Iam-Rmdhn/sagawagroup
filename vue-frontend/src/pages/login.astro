---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Login">
  <main class="min-h-screen flex items-center justify-center bg-gradient-to-br from-amber-100 to-orange-100">
    <div class="w-full max-w-md bg-white rounded-2xl shadow-2xl p-8 sm:p-10 flex flex-col gap-6 animate-fade-in-up">
      <h1 class="text-2xl font-bold text-center text-amber-600 mb-2">Login</h1>
      <form class="flex flex-col gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Email atau No. Telp</label>
          <input type="text" placeholder="Email atau No. Telp" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-amber-500 transition" required />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
          <input type="password" placeholder="Password" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-amber-500 transition" required />
        </div>
        <button type="submit" class="w-full py-2 bg-gradient-to-r from-amber-500 to-orange-500 text-white font-semibold rounded-lg shadow-lg hover:scale-105 transition">Login</button>
      </form>
      <div class="text-center text-sm text-gray-600 mt-2">
        Belum punya akun?
        <a href="/register" class="text-amber-600 font-semibold hover:underline">Register</a>
      </div>
    </div>
  </main>
</Layout>
