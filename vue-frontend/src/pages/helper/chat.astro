---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Business Consulting - Sagawa Group">
  <div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-2xl mx-auto">
      <div class="bg-white rounded-lg shadow-md p-8">
        <div class="text-center mb-8">
          <div class="flex justify-center mb-4">
            <div class="bg-blue-100 p-3 rounded-full">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
            </div>
          </div>
          <h1 class="text-3xl font-bold text-gray-900 mb-4">Need Business Consulting?</h1>
          <p class="text-lg text-gray-600 leading-relaxed">
            Tell us about your business challenges, goals, or questions you'd like to discuss. 
            Our consulting team is ready to help you find the best solutions for your business growth 
            and development needs.
          </p>
        </div>

        <form id="problemForm" class="space-y-6">
          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
              Your Business Inquiry
            </label>
            <textarea
              id="message"
              name="message"
              rows="6"
              placeholder="Tell us about your business needs, challenges, or questions..."
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors resize-none"
            ></textarea>
          </div>

          <button
            type="submit"
            class="w-full bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 text-black font-bold py-4 px-8 rounded-lg transition-all duration-300 transform hover:scale-105 hover:shadow-lg flex items-center justify-center space-x-3 border-2 border-green-600 hover:border-green-700"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.569-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
            </svg>
            <span class="text-lg">Start Consultation via WhatsApp</span>
          </button>
        </form>
      </div>
    </div>
  </div>

  <script>
    document.getElementById('problemForm')?.addEventListener('submit', function(e) {
      e.preventDefault();
      
      const messageInput = document.getElementById('message') as HTMLTextAreaElement;
      const message = messageInput.value.trim();
      
      if (!message) {
        alert('Please describe your business inquiry');
        return;
      }

      const url = `https://api.whatsapp.com/send?phone=6285717269057&text=Halo%20Tim%20Konsultan%20Sagawa%20Group!%0ASaya%20membutuhkan%20konsultasi%20bisnis%20terkait:%0A*${encodeURIComponent(message)}*%0A%0ATerima%20kasih!`;
      
      window.open(url, '_blank');
      
      // Optional: Clear the form after sending
      messageInput.value = '';
    });
  </script>
</Layout>
