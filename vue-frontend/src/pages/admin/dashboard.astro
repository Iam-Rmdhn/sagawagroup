  // Visitor Analytics Functions
  let visitorUpdateInterval: NodeJS.Timeout | null = null;

  async function updateVisitorStats() {
    try {
      const response = await fetch(`${API_URL}/api/analytics/stats`);
      if (response.ok) {
        const data = await response.json();
        
        // Update active visitors count with smooth animation
        const activeVisitorsEl = document.getElementById('active-visitors');
        if (activeVisitorsEl) {
          activeVisitorsEl.classList.remove('loading-pulse');
          
          const currentValue = parseInt(activeVisitorsEl.textContent || '0');
          const newValue = data.activeVisitors || 0;
          
          if (currentValue !== newValue) {
            // Animate the number change
            const duration = 500;
            const increment = (newValue - currentValue) / (duration / 16);
            let current = currentValue;
            
            const animate = () => {
              current += increment;
              if ((increment > 0 && current >= newValue) || (increment < 0 && current <= newValue)) {
                activeVisitorsEl.textContent = newValue.toString();
              } else {
                activeVisitorsEl.textContent = Math.floor(current).toString();
                requestAnimationFrame(animate);
              }
            };
            animate();
          }
        }
        
        console.log('[Analytics] Visitor stats updated:', data);
      }
    } catch (error) {
      console.error('[Analytics] Error fetching visitor stats:', error);
    }
  }

