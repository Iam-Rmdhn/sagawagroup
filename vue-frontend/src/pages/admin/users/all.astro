---
// Admin - Semua Pengguna & Mitra
import Layout from '../../../layouts/Layout.astro';
import AdminSidebar from '../../../components/admin/sidebar/AdminSidebar.astro';
import AdminNavbar from '../../../components/admin/navbar/AdminNavbar.astro';
import UserTable from '../../../components/admin/UserTable.astro';
---

<Layout title="Semua Pengguna - Admin Dashboard">
  <style>
    /* Global fixes for scroll stability */
    * {
      transform: translateZ(0);
      will-change: auto;
    }
    
    body, html {
      overflow-x: hidden;
      scroll-behavior: smooth;
    }
  </style>

  <!-- Admin Navbar -->
  <AdminNavbar />

  <!-- Admin Sidebar -->
  <AdminSidebar currentPage="users" />

  <!-- Main Content -->
  <div class="p-4 sm:ml-0">
    <div class="p-4 mt-14">
      <!-- Page Header -->
      <div class="mb-8 pt-2 sm:mb-8">
        <div class="bg-gradient-to-r from-amber-500 to-orange-600 rounded-2xl p-6 text-white shadow-2xl">
            <div class="flex items-center space-x-3 mb-2">
                <div class="w-12 h-12 mr-3 ml-2 flex items-center justify-center">
                    <svg class="w-12 h-12" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M10 15H6a4 4 0 0 0-4 4v2"/>
                        <path d="m14.305 16.53.923-.382"/>
                        <path d="m15.228 13.852-.923-.383"/>
                        <path d="m16.852 12.228-.383-.923"/>
                        <path d="m16.852 17.772-.383.924"/>
                        <path d="m19.148 12.228.383-.923"/>
                        <path d="m19.53 18.696-.382-.924"/>
                        <path d="m20.772 13.852.924-.383"/>
                        <path d="m20.772 16.148.924.383"/>
                        <circle cx="18" cy="15" r="3"/>
                        <circle cx="9" cy="7" r="4"/>
                    </svg>
                </div>
                <div>
                    <h1 class="text-3xl font-black text-white">Semua Pengguna</h1>
                    <p class="text-sm text-amber-100 mt-1">Daftar lengkap semua pengguna dan mitra dalam sistem</p>
                </div>
            </div>
        </div>

      <!-- Stats Cards -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-3 mb-8">
        <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-xl p-6 shadow-lg border border-blue-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-blue-600 mb-1">Total Users</p>
              <p id="total-users" class="text-3xl font-bold text-blue-900">-</p>
            </div>
            <div class="w-16 h-16 flex items-center justify-center">
              <svg class="w-10 h-10 text-blue-900" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"></path>
              </svg>
            </div>
          </div>
        </div>

        <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-xl p-6 shadow-lg border border-green-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-green-600 mb-1">Mitra Disetujui</p>
              <p id="approved-count" class="text-3xl font-bold text-green-900">-</p>
            </div>
            <div class="w-16 h-16 flex items-center justify-center">
              <svg class="w-10 h-10 text-green-900" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
            </div>
          </div>
        </div>

        <div class="bg-gradient-to-br from-yellow-50 to-yellow-100 rounded-xl p-6 shadow-lg border border-yellow-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-yellow-600 mb-1">Menunggu</p>
              <p id="pending-count" class="text-3xl font-bold text-yellow-900">-</p>
            </div>
            <div class="w-16 h-16 flex items-center justify-center">
              <svg class="w-10 h-10 text-yellow-900" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-hourglass-icon lucide-hourglass"><path d="M5 22h14"/><path d="M5 2h14"/><path d="M17 22v-4.172a2 2 0 0 0-.586-1.414L12 12l-4.414 4.414A2 2 0 0 0 7 17.828V22"/><path d="M7 2v4.172a2 2 0 0 0 .586 1.414L12 12l4.414-4.414A2 2 0 0 0 17 6.172V2"/></svg>
            </div>
          </div>
        </div>
      </div>

      <!-- User Table -->
      <UserTable />
    </div>
  </div>

  <!-- Modal untuk Detail Mitra -->
  <div id="mitraDetailModal" class="modal-detail hidden fixed inset-0 z-50 overflow-y-auto">
    <div class="flex items-center justify-center min-h-screen p-4">
      <!-- Background overlay -->
      <div class="fixed inset-0 bg-black bg-opacity-50 backdrop-blur-sm transition-opacity" onclick="closeMitraDetailModal()"></div>
      
      <!-- Modal panel -->
      <div class="modal-panel relative bg-white rounded-xl shadow-2xl max-w-4xl w-full">
        <!-- Modal Header -->
        <div class="modal-header bg-gradient-to-r from-amber-50 to-orange-50 px-6 py-4 border-b border-orange-100 rounded-t-xl">
          <div class="flex justify-between items-center">
            <h3 class="text-xl font-bold text-gray-900">Detail Mitra</h3>
            <button onclick="closeMitraDetailModal()" class="text-gray-400 hover:text-gray-600 p-2 rounded-full transition-all">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>
        </div>
        
        <!-- Modal Content -->
        <div class="modal-detail-content p-6">
          <div id="mitraDetailContent"></div>
        </div>
        
        <!-- Modal Footer -->
        <div class="modal-footer bg-gray-50 px-6 py-4 border-t border-gray-100 rounded-b-xl flex justify-end">
          <button onclick="closeMitraDetailModal()" class="px-4 py-2 bg-gray-500 hover:bg-gray-600 text-white rounded-lg transition-colors">
            Tutup
          </button>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { loadMitraData, renderTableRows, approveMitra, deleteMitra, getMitraDetail, checkAdminAuth } from '../../../lib/adminHelpers';

  // Check authentication
  if (!checkAdminAuth()) {
    throw new Error('Authentication required');
  }

  // Load data on page load
  document.addEventListener('DOMContentLoaded', async () => {
    await loadData();
  });

  // Refresh button handler
  const refreshBtn = document.getElementById('refresh-btn');
  if (refreshBtn) {
    refreshBtn.addEventListener('click', async () => {
      await loadData();
    });
  }

  async function loadData() {
    try {
      const tableBody = document.getElementById('mitra-table-body');
      if (!tableBody) return;

      // Show loading
      tableBody.innerHTML = '<tr><td colspan="7" class="px-6 py-4 text-center text-gray-500">Loading...</td></tr>';

      // Load all mitra data
      const mitras = await loadMitraData('all');

      // Update stats
      const totalUsers = mitras.length;
      const approvedCount = mitras.filter(m => m.status === 'approved').length;
      const pendingCount = mitras.filter(m => m.status === 'pending').length;

      document.getElementById('total-users')!.textContent = totalUsers.toString();
      document.getElementById('approved-count')!.textContent = approvedCount.toString();
      document.getElementById('pending-count')!.textContent = pendingCount.toString();

      // Render table
      renderTableRows(mitras, tableBody);
    } catch (error) {
      console.error('Error loading data:', error);
      const tableBody = document.getElementById('mitra-table-body');
      if (tableBody) {
        tableBody.innerHTML = '<tr><td colspan="7" class="px-6 py-4 text-center text-red-500">Error loading data</td></tr>';
      }
    }
  }

  // Global functions for buttons
  (window as any).viewMitraDetail = async (mitraId: string) => {
    const mitra = await getMitraDetail(mitraId);
    if (mitra) {
      showMitraDetailModal(mitra);
    }
  };

  (window as any).approveMitra = async (mitraId: string) => {
    if (confirm('Apakah Anda yakin ingin menyetujui mitra ini?')) {
      const success = await approveMitra(mitraId);
      if (success) {
        alert('Mitra berhasil disetujui');
        await loadData();
      } else {
        alert('Gagal menyetujui mitra');
      }
    }
  };

  (window as any).deleteMitra = async (mitraId: string) => {
    if (confirm('Apakah Anda yakin ingin menghapus mitra ini?')) {
      const success = await deleteMitra(mitraId);
      if (success) {
        alert('Mitra berhasil dihapus');
        await loadData();
      } else {
        alert('Gagal menghapus mitra');
      }
    }
  };

  function showMitraDetailModal(mitra: any) {
    const modal = document.getElementById('mitraDetailModal');
    const content = document.getElementById('mitraDetailContent');
    
    if (modal && content) {
      const validSubBrands = ['Masakan Mas Gawa', 'Warnas', 'Mas Gaw'];
      let subBrandDisplay = '-';
      
      if (mitra.paketUsaha === 'RM Nusantara' && mitra.rmNusantaraSubMenu && validSubBrands.includes(mitra.rmNusantaraSubMenu)) {
        subBrandDisplay = `<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800 border border-purple-200">
          ${mitra.rmNusantaraSubMenu}
        </span>`;
      }
      
      content.innerHTML = `
        <div class="grid grid-cols-2 gap-4">
          <div><strong>Nama:</strong> ${mitra.namaMitra || mitra.nama || '-'}</div>
          <div><strong>Email:</strong> ${mitra.email || '-'}</div>
          <div><strong>No HP:</strong> ${mitra.noHp || '-'}</div>
          <div><strong>Paket Brand:</strong> <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 border border-blue-200">${mitra.paketUsaha || '-'}</span></div>
          <div><strong>Sub Brand:</strong> ${subBrandDisplay}</div>
          <div><strong>Status:</strong> ${mitra.status || '-'}</div>
        </div>
      `;
      modal.classList.remove('hidden');
    }
  }

  (window as any).closeMitraDetailModal = () => {
    const modal = document.getElementById('mitraDetailModal');
    if (modal) {
      modal.classList.add('hidden');
    }
  };
</script>
