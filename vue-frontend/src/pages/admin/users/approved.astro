---
// Admin - Mitra Disetujui
import Layout from '../../../layouts/Layout.astro';
import AdminSidebar from '../../../components/admin/sidebar/AdminSidebar.astro';
import AdminNavbar from '../../../components/admin/navbar/AdminNavbar.astro';
import UserTable from '../../../components/admin/UserTable.astro';
---

<Layout title="Mitra Disetujui - Admin Dashboard">
  <style>
    * {
      transform: translateZ(0);
      will-change: auto;
    }
    
    body, html {
      overflow-x: hidden;
      scroll-behavior: smooth;
    }
  </style>

  <!-- Admin Navbar -->
  <AdminNavbar />

  <!-- Admin Sidebar -->
  <AdminSidebar currentPage="users" />

  <!-- Main Content -->
  <div class="p-4 sm:ml-0">
    <div class="p-4 mt-14">
      <!-- Page Header -->
      <div class="mt-3 mb-6">
        <div class="bg-gradient-to-r from-green-800 to-green-500 rounded-2xl p-6 text-white shadow-2xl">
            <div class="flex items-center space-x-3 mb-2">
            <div class="w-12 h-12 mr-2 flex items-center justify-center">
                <svg class="w-12 h-12" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect width="8" height="4" x="8" y="2" rx="1" ry="1"/>
                    <path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"/>
                    <path d="m9 14 2 2 4-4"/>
                </svg>
            </div>
            <div>
                <h1 class="text-3xl font-black text-white">Mitra Sagawa Disetujui</h1>
                <p class="text-sm text-green-100 mt-1">Daftar mitra yang telah mendapat persetujuan</p>
            </div>
            </div>
      </div>
      </div>

      <!-- Stats Card -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
        <div class="bg-gradient-to-br from-green-50 to-emerald-100 rounded-xl p-6 shadow-lg border border-green-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-green-600 mb-1">Total Mitra Aktif</p>
              <p id="approved-count" class="text-4xl font-bold text-green-900">-</p>
              <p class="text-xs text-green-600 mt-2">Mitra yang sudah disetujui</p>
            </div>
            <div class="w-16 h-16 flex items-center justify-center">
              <svg class="w-10 h-10 text-green-900" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-user-check-icon lucide-user-check"><path d="m16 11 2 2 4-4"/><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/></svg>
            </div>
          </div>
        </div>

        <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-xl p-6 shadow-lg border border-blue-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-blue-600 mb-1">Status</p>
              <p class="text-2xl font-bold text-blue-900">Aktif</p>
              <p class="text-xs text-blue-600 mt-2">Semua mitra dalam status aktif</p>
            </div>
            <div class="w-16 h-16 flex items-center justify-center">
              <svg class="w-1- h-10 text-blue-900" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 10a8 8 0 018-8v8h8a8 8 0 11-16 0z"></path>
                <path d="M12 2.252A8.014 8.014 0 0117.748 8H12V2.252z"></path>
              </svg>
            </div>
          </div>
        </div>
      </div>

      <!-- User Table -->
      <UserTable />
    </div>
  </div>

  <!-- Modal untuk Detail Mitra -->
  <div id="mitraDetailModal" class="modal-detail hidden fixed inset-0 z-50 overflow-y-auto">
    <div class="flex items-center justify-center min-h-screen p-4">
      <div class="fixed inset-0 bg-black bg-opacity-50 backdrop-blur-sm transition-opacity" onclick="closeMitraDetailModal()"></div>
      
      <div class="modal-panel relative bg-white rounded-xl shadow-2xl max-w-4xl w-full">
        <div class="modal-header bg-gradient-to-r from-green-50 to-emerald-50 px-6 py-4 border-b border-green-100 rounded-t-xl">
          <div class="flex justify-between items-center">
            <h3 class="text-xl font-bold text-gray-900">Detail Mitra Disetujui</h3>
            <button onclick="closeMitraDetailModal()" class="text-gray-400 hover:text-gray-600 p-2 rounded-full transition-all">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>
        </div>
        
        <div class="modal-detail-content p-6">
          <div id="mitraDetailContent"></div>
        </div>
        
        <div class="modal-footer bg-gray-50 px-6 py-4 border-t border-gray-100 rounded-b-xl flex justify-end">
          <button onclick="closeMitraDetailModal()" class="px-4 py-2 bg-gray-500 hover:bg-gray-600 text-white rounded-lg transition-colors">
            Tutup
          </button>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { loadMitraData, renderTableRows, deleteMitra, getMitraDetail, checkAdminAuth } from '../../../lib/adminHelpers';

  if (!checkAdminAuth()) {
    throw new Error('Authentication required');
  }

  document.addEventListener('DOMContentLoaded', async () => {
    await loadData();
    
    // Update table title
    const tableTitle = document.getElementById('table-title');
    const tableDesc = document.getElementById('table-description');
    if (tableTitle) tableTitle.textContent = 'Mitra Disetujui';
    if (tableDesc) tableDesc.textContent = 'Daftar mitra yang telah mendapat persetujuan dan aktif';
  });

  const refreshBtn = document.getElementById('refresh-btn');
  if (refreshBtn) {
    refreshBtn.addEventListener('click', async () => {
      await loadData();
    });
  }

  async function loadData() {
    try {
      const tableBody = document.getElementById('mitra-table-body');
      if (!tableBody) return;

      tableBody.innerHTML = '<tr><td colspan="7" class="px-6 py-4 text-center text-gray-500">Loading...</td></tr>';

      const mitras = await loadMitraData('approved');

      document.getElementById('approved-count')!.textContent = mitras.length.toString();

      renderTableRows(mitras, tableBody);
    } catch (error) {
      console.error('Error loading data:', error);
      const tableBody = document.getElementById('mitra-table-body');
      if (tableBody) {
        tableBody.innerHTML = '<tr><td colspan="7" class="px-6 py-4 text-center text-red-500">Error loading data</td></tr>';
      }
    }
  }

  (window as any).viewMitraDetail = async (mitraId: string) => {
    const mitra = await getMitraDetail(mitraId);
    if (mitra) {
      showMitraDetailModal(mitra);
    }
  };

  (window as any).deleteMitra = async (mitraId: string) => {
    if (confirm('Apakah Anda yakin ingin menghapus mitra ini?')) {
      const success = await deleteMitra(mitraId);
      if (success) {
        alert('Mitra berhasil dihapus');
        await loadData();
      } else {
        alert('Gagal menghapus mitra');
      }
    }
  };

  function showMitraDetailModal(mitra: any) {
    const modal = document.getElementById('mitraDetailModal');
    const content = document.getElementById('mitraDetailContent');
    
    if (modal && content) {
      const validSubBrands = ['Masakan Mas Gawa', 'Warnas', 'Mas Gaw'];
      let subBrandDisplay = '-';
      
      if (mitra.paketUsaha === 'RM Nusantara' && mitra.rmNusantaraSubMenu && validSubBrands.includes(mitra.rmNusantaraSubMenu)) {
        subBrandDisplay = `<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800 border border-purple-200">
          ${mitra.rmNusantaraSubMenu}
        </span>`;
      }
      
      content.innerHTML = `
        <div class="grid grid-cols-2 gap-4">
          <div><strong>Nama:</strong> ${mitra.namaMitra || mitra.nama || '-'}</div>
          <div><strong>Email:</strong> ${mitra.email || '-'}</div>
          <div><strong>No HP:</strong> ${mitra.noHp || '-'}</div>
          <div><strong>Paket Brand:</strong> <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 border border-blue-200">${mitra.paketUsaha || '-'}</span></div>
          <div><strong>Sub Brand:</strong> ${subBrandDisplay}</div>
          <div><strong>Status:</strong> <span class="text-green-600 font-semibold">Disetujui</span></div>
        </div>
      `;
      modal.classList.remove('hidden');
    }
  }

  (window as any).closeMitraDetailModal = () => {
    const modal = document.getElementById('mitraDetailModal');
    if (modal) {
      modal.classList.add('hidden');
    }
  };
</script>
