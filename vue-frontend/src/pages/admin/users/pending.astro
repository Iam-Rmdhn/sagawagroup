---
// Admin - Mitra Menunggu Persetujuan
import Layout from '../../../layouts/Layout.astro';
import AdminSidebar from '../../../components/admin/sidebar/AdminSidebar.astro';
import AdminNavbar from '../../../components/admin/navbar/AdminNavbar.astro';
import UserTable from '../../../components/admin/UserTable.astro';
---

<Layout title="Mitra Menunggu - Admin Dashboard">
  <style>
    * {
      transform: translateZ(0);
      will-change: auto;
    }
    
    body, html {
      overflow-x: hidden;
      scroll-behavior: smooth;
    }
  </style>

  <!-- Admin Navbar -->
  <AdminNavbar />

  <!-- Admin Sidebar -->
  <AdminSidebar currentPage="users" />

  <!-- Main Content -->
  <div class="p-4 sm:ml-0">
    <div class="p-4 mt-14">
      <!-- Page Header -->
      <div class="mt-3 mb-6">
        <div class="bg-gradient-to-r from-red-600 to-amber-900 rounded-2xl p-6 text-white shadow-2xl">
            <div class="flex items-center space-x-3 mb-2">
            <div class="w-12 h-12 mr-2 flex items-center justify-center">
                <svg class="w-12 h-12 text-white" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-clipboard-clock-icon lucide-clipboard-clock"><path d="M16 14v2.2l1.6 1"/><path d="M16 4h2a2 2 0 0 1 2 2v.832"/><path d="M8 4H6a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h2"/><circle cx="16" cy="16" r="6"/><rect x="8" y="2" width="8" height="4" rx="1"/></svg>
            </div>
            <div>
                <h1 class="text-3xl font-black text-white">Mitra Menunggu Persetujuan</h1>
                <p class="text-sm text-red-100 mt-1">Daftar mitra yang menunggu untuk disetujui</p>
            </div>
            </div>
        </div>
      </div>

      <!-- Stats Card -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
        <div class="bg-gradient-to-br from-yellow-50 to-orange-100 rounded-xl p-6 shadow-lg border border-yellow-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-yellow-600 mb-1">Menunggu Persetujuan</p>
              <p id="pending-count" class="text-4xl font-bold text-yellow-900">-</p>
              <p class="text-xs text-yellow-600 mt-2">Membutuhkan tindakan segera</p>
            </div>
            <div class="w-16 h-16 flex items-center justify-center">
              <svg class="w-14 h-14 text-yellow-900" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-clock4-icon lucide-clock-4"><path d="M12 6v6l4 2"/><circle cx="12" cy="12" r="10"/></svg>
            </div>
          </div>
        </div>

        <div class="bg-gradient-to-br from-red-50 to-red-100 rounded-xl p-6 shadow-lg border border-red-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-red-600 mb-1">Perlu Action</p>
              <p class="text-2xl font-bold text-red-900">Segera Tinjau</p>
              <p class="text-xs text-red-600 mt-2">Setujui atau tolak pendaftaran mitra</p>
            </div>
            <div class="w-16 h-16 flex items-center justify-center">
              <svg class="w-14 h-14 text-red-900"width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-clock-alert-icon lucide-clock-alert"><path d="M12 6v6l4 2"/><path d="M20 12v5"/><path d="M20 21h.01"/><path d="M21.25 8.2A10 10 0 1 0 16 21.16"/></svg>
            </div>
          </div>
        </div>
      </div>

      <!-- Alert Banner -->
      <div id="pending-alert" class="hidden mb-6 bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded-lg shadow">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm text-yellow-700">
              <strong>Ada <span id="pending-count-alert">0</span> mitra menunggu persetujuan.</strong> Silakan tinjau dan setujui pendaftaran mereka.
            </p>
          </div>
        </div>
      </div>

      <!-- User Table -->
      <UserTable />
    </div>
  </div>

  <!-- Modal untuk Detail Mitra -->
  <div id="mitraDetailModal" class="modal-detail hidden fixed inset-0 z-50 overflow-y-auto">
    <div class="flex items-center justify-center min-h-screen p-4">
      <div class="fixed inset-0 bg-black bg-opacity-50 backdrop-blur-sm transition-opacity" onclick="closeMitraDetailModal()"></div>
      
      <div class="modal-panel relative bg-white rounded-xl shadow-2xl max-w-4xl w-full">
        <div class="modal-header bg-gradient-to-r from-yellow-50 to-orange-50 px-6 py-4 border-b border-yellow-100 rounded-t-xl">
          <div class="flex justify-between items-center">
            <h3 class="text-xl font-bold text-gray-900">Detail Mitra Pending</h3>
            <button onclick="closeMitraDetailModal()" class="text-gray-400 hover:text-gray-600 p-2 rounded-full transition-all">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>
        </div>
        
        <div class="modal-detail-content p-6">
          <div id="mitraDetailContent"></div>
        </div>
        
        <div class="modal-footer bg-gray-50 px-6 py-4 border-t border-gray-100 rounded-b-xl flex justify-end space-x-3">
          <button id="approve-btn-modal" class="px-4 py-2 bg-green-500 hover:bg-green-600 text-white rounded-lg transition-colors">
            Setujui
          </button>
          <button onclick="closeMitraDetailModal()" class="px-4 py-2 bg-gray-500 hover:bg-gray-600 text-white rounded-lg transition-colors">
            Tutup
          </button>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { loadMitraData, renderTableRows, approveMitra, deleteMitra, getMitraDetail, checkAdminAuth } from '../../../lib/adminHelpers';

  if (!checkAdminAuth()) {
    throw new Error('Authentication required');
  }

  let currentMitraId: string | null = null;

  document.addEventListener('DOMContentLoaded', async () => {
    await loadData();
    
    // Update table title
    const tableTitle = document.getElementById('table-title');
    const tableDesc = document.getElementById('table-description');
    if (tableTitle) tableTitle.textContent = 'Mitra Menunggu Persetujuan';
    if (tableDesc) tableDesc.textContent = 'Daftar mitra yang menunggu untuk disetujui oleh admin';
  });

  const refreshBtn = document.getElementById('refresh-btn');
  if (refreshBtn) {
    refreshBtn.addEventListener('click', async () => {
      await loadData();
    });
  }

  const approveBtnModal = document.getElementById('approve-btn-modal');
  if (approveBtnModal) {
    approveBtnModal.addEventListener('click', async () => {
      if (currentMitraId) {
        await (window as any).approveMitra(currentMitraId);
        (window as any).closeMitraDetailModal();
      }
    });
  }

  async function loadData() {
    try {
      const tableBody = document.getElementById('mitra-table-body');
      if (!tableBody) return;

      tableBody.innerHTML = '<tr><td colspan="7" class="px-6 py-4 text-center text-gray-500">Loading...</td></tr>';

      const mitras = await loadMitraData('pending');

      const pendingCount = mitras.length;
      document.getElementById('pending-count')!.textContent = pendingCount.toString();
      
      const pendingCountAlert = document.getElementById('pending-count-alert');
      if (pendingCountAlert) {
        pendingCountAlert.textContent = pendingCount.toString();
      }

      // Show/hide alert
      const alert = document.getElementById('pending-alert');
      if (alert) {
        if (pendingCount > 0) {
          alert.classList.remove('hidden');
        } else {
          alert.classList.add('hidden');
        }
      }

      renderTableRows(mitras, tableBody);
    } catch (error) {
      console.error('Error loading data:', error);
      const tableBody = document.getElementById('mitra-table-body');
      if (tableBody) {
        tableBody.innerHTML = '<tr><td colspan="7" class="px-6 py-4 text-center text-red-500">Error loading data</td></tr>';
      }
    }
  }

  (window as any).viewMitraDetail = async (mitraId: string) => {
    currentMitraId = mitraId;
    const mitra = await getMitraDetail(mitraId);
    if (mitra) {
      showMitraDetailModal(mitra);
    }
  };

  (window as any).approveMitra = async (mitraId: string) => {
    if (confirm('Apakah Anda yakin ingin menyetujui mitra ini?')) {
      const success = await approveMitra(mitraId);
      if (success) {
        alert('Mitra berhasil disetujui');
        await loadData();
      } else {
        alert('Gagal menyetujui mitra');
      }
    }
  };

  (window as any).deleteMitra = async (mitraId: string) => {
    if (confirm('Apakah Anda yakin ingin menghapus mitra ini?')) {
      const success = await deleteMitra(mitraId);
      if (success) {
        alert('Mitra berhasil dihapus');
        await loadData();
      } else {
        alert('Gagal menghapus mitra');
      }
    }
  };

  function showMitraDetailModal(mitra: any) {
    const modal = document.getElementById('mitraDetailModal');
    const content = document.getElementById('mitraDetailContent');
    
    if (modal && content) {
      const validSubBrands = ['Masakan Mas Gawa', 'Warnas', 'Mas Gaw'];
      let subBrandDisplay = '-';
      
      if (mitra.paketUsaha === 'RM Nusantara' && mitra.rmNusantaraSubMenu && validSubBrands.includes(mitra.rmNusantaraSubMenu)) {
        subBrandDisplay = `<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800 border border-purple-200">
          ${mitra.rmNusantaraSubMenu}
        </span>`;
      }
      
      content.innerHTML = `
        <div class="grid grid-cols-2 gap-4">
          <div><strong>Nama:</strong> ${mitra.namaMitra || mitra.nama || '-'}</div>
          <div><strong>Email:</strong> ${mitra.email || '-'}</div>
          <div><strong>No HP:</strong> ${mitra.noHp || '-'}</div>
          <div><strong>Paket Brand:</strong> <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 border border-blue-200">${mitra.paketUsaha || '-'}</span></div>
          <div><strong>Sub Brand:</strong> ${subBrandDisplay}</div>
          <div><strong>Status:</strong> <span class="text-yellow-600 font-semibold">Menunggu Persetujuan</span></div>
        </div>
      `;
      modal.classList.remove('hidden');
    }
  }

  (window as any).closeMitraDetailModal = () => {
    const modal = document.getElementById('mitraDetailModal');
    if (modal) {
      modal.classList.add('hidden');
    }
    currentMitraId = null;
  };
</script>
