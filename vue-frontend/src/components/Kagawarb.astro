---
// Kagawa Rice Bowl Component
import krbImage from '../assets/img/gerobak/krb.png';
---

<section class="bg-gradient-to-br from-stone-100 via-amber-50 to-orange-50 py-12 px-6">
  <div class="max-w-6xl mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      
      <!-- Food Stand Image -->
      <div class="relative flex justify-center lg:justify-start">
        <img 
          src={krbImage.src} 
          alt="Kagawa Rice Bowl Stand"
          class="w-80 h-auto object-contain drop-shadow-xl"
        />
      </div>

      <!-- Content Section -->
      <div class="space-y-6">
        <!-- Title -->
        <div>
          <h2 class="text-5xl font-bold text-black mb-6 leading-tight">
            Kagawa Rice Bowl
          </h2>
          
          <!-- Mitra Benefits -->
          <div class="space-y-4">
            <h3 class="text-2xl font-bold text-black mb-5">Mitra Benefit :</h3>
            
            <div class="space-y-2">
              <!-- Each Benefit Item -->
              <div class="flex items-start space-x-3">
                <div class="w-2 h-2 bg-black rounded-full mt-3 flex-shrink-0"></div>
                <span class="text-black text-lg font-medium leading-relaxed">Bahan Baku & Peralatan</span>
              </div>
              
              <div class="flex items-start space-x-3">
                <div class="w-2 h-2 bg-black rounded-full mt-3 flex-shrink-0"></div>
                <span class="text-black text-lg font-medium leading-relaxed">Dibantu Mencari Karyawan</span>
              </div>
              
              <div class="flex items-start space-x-3">
                <div class="w-2 h-2 bg-black rounded-full mt-3 flex-shrink-0"></div>
                <span class="text-black text-lg font-medium leading-relaxed">SOP & Training</span>
              </div>
              
              <div class="flex items-start space-x-3">
                <div class="w-2 h-2 bg-black rounded-full mt-3 flex-shrink-0"></div>
                <span class="text-black text-lg font-medium leading-relaxed">Media Promosi</span>
              </div>
              
              <div class="flex items-start space-x-3">
                <div class="w-2 h-2 bg-black rounded-full mt-3 flex-shrink-0"></div>
                <span class="text-black text-lg font-medium leading-relaxed">Dukungan dari Pusat</span>
              </div>
              
              <div class="flex items-start space-x-3">
                <div class="w-2 h-2 bg-black rounded-full mt-3 flex-shrink-0"></div>
                <span class="text-black text-lg font-medium leading-relaxed">Akses ke jaringan supplier resmi</span>
              </div>
              
              <div class="flex items-start space-x-3">
                <div class="w-2 h-2 bg-black rounded-full mt-3 flex-shrink-0"></div>
                <span class="text-black text-lg font-medium leading-relaxed">E-money special Sagawa Group</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Pricing Section -->
        <div class="space-y-3 pt-4">
          <!-- Original Price (Strikethrough) -->
          <div class="text-2xl text-red-500 font-bold">
            <span class="line-through decoration-2">Rp. 75.000.000</span>
          </div>
          
          <!-- Discounted Price -->
          <div class="text-5xl font-bold text-red-500 mb-8">
            Rp. 50.000.000
          </div>
          
          <!-- CTA Button -->
          <button class="bg-gradient-to-r from-amber-600 to-yellow-700 hover:from-amber-700 hover:to-yellow-800 text-white px-8 py-4 rounded-xl font-bold text-lg shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300 flex items-center space-x-3 border-2 border-amber-700">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"></path>
              <path fill-rule="evenodd" d="M4 5a2 2 0 012-2h8a2 2 0 012 2v6a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 3a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3z" clip-rule="evenodd"></path>
            </svg>
            <span>Daftar Jadi Mitra</span>
          </button>
        </div>
      </div>
      
    </div>
  </div>
</section>