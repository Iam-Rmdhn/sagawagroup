</section>

<!-- Partnership Options -->
<section id="partnership-section" class="py-20 px-4 sm:px-6 bg-gradient-to-br from-slate-50 via-white to-amber-50 scroll-mt-16 relative overflow-hidden">
  <div class="max-w-7xl mx-auto space-y-32 relative z-10">
    
    {partnerships.map((partner, index) => {
      const isEven = index % 2 === 0;
      return (
        <div class={`intersection-observe alternating-layout stagger-${index + 1} ${isEven ? 'layout-left' : 'layout-right'}`}>
          
          <!-- Image Section -->
          <div class="image-container">
            <div class="relative group w-full max-w-sm sm:max-w-md lg:max-w-lg mx-auto lg:mx-0">
              <!-- Badge positioned on top-right of image -->
              <div class={`absolute -top-2 -right-2 sm:-top-3 sm:-right-3 z-20 px-2 py-1 sm:px-4 sm:py-2 rounded-lg sm:rounded-xl text-white text-xs font-bold shadow-lg bg-gradient-to-r ${partner.color}`}>
                {partner.badge}
              </div>
              
              {partner.hasCards ? (
                <!-- Mobile Responsive Image Carousel for RM Nusantara -->
                <div class="large-carousel" data-carousel>
                  <div class="carousel-container">
                    {partner.cardImages.map((img, imgIndex) => (
                      <div class={`carousel-slide ${imgIndex === 0 ? 'active' : ''}`} 
                           data-slide={imgIndex}>
                        <img 
                          src={img.src} 
                          alt={img.alt}
                          loading="lazy"
                          class="w-full h-full object-contain"
                        />
                      </div>
                    ))}
                  </div>
                  <div class="simple-indicators">
                    {partner.cardImages.map((_, imgIndex) => (
                      <div class={`simple-dot ${imgIndex === 0 ? 'active' : ''}`} 
                           data-dot={imgIndex}></div>
                    ))}
                  </div>
                </div>
              ) : (
                <!-- Mobile Responsive Large Image -->
                <div class="relative overflow-hidden rounded-xl sm:rounded-2xl bg-gradient-to-br from-amber-50 to-orange-50 shadow-lg">
                  <img 
                    src={partner.image.src} 
                    alt={partner.alt}
                    class="w-full h-64 sm:h-80 lg:h-96 object-contain transition-transform duration-300 hover:scale-105 p-3 sm:p-4 lg:p-6"
                    loading="lazy"
                  />
                </div>
              )}
            </div>
          </div>

          <!-- Content Section -->
          <div class="content-container">
            <!-- Mobile Title (Only visible on mobile) -->
            <div class="block lg:hidden text-center mb-4 sm:mb-6">
              <h2 class="text-3xl sm:text-4xl font-black text-gray-900 mb-2 leading-tight">
                {partner.title}
              </h2>
              <p class="text-lg text-gray-600 font-medium">
                {partner.subtitle}
              </p>
            </div>
            
            <!-- Desktop Title & Subtitle -->
            <div class="space-y-2 sm:space-y-4 mb-6 sm:mb-8">
              <h2 class="hidden lg:block text-3xl sm:text-4xl xl:text-5xl font-black text-gray-900 leading-tight">
                <span class="text-gradient">{partner.title}</span>
              </h2>
              <p class="hidden lg:block text-base sm:text-lg text-gray-600 font-medium leading-relaxed">
                {partner.subtitle}
              </p>
            </div>
            
            <!-- Benefits Section -->
            <div class="space-y-4 sm:space-y-6 text-left mb-6 sm:mb-8">
              <h3 class="text-xl sm:text-2xl lg:text-3xl font-bold text-gradient mb-4 sm:mb-6 text-center lg:text-left">
                Mitra Benefit Premium
              </h3>
              
              <div class="grid gap-3 sm:gap-4">
                {partner.benefits.map((benefit) => (
                  <div class="benefit-item p-3 sm:p-4 rounded-xl sm:rounded-2xl">
                    <div class="flex items-start space-x-3 sm:space-x-4">
                      <div class="flex-shrink-0 w-5 h-5 sm:w-6 sm:h-6 bg-gradient-to-r from-amber-500 to-orange-600 rounded-full mt-0.5 shadow-md flex items-center justify-center">
                        <svg class="w-2.5 h-2.5 sm:w-3 sm:h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                        </svg>
                      </div>
                      <span class="text-gray-800 text-sm sm:text-base font-medium leading-relaxed">{benefit}</span>
                    </div>
                  </div>
                ))}
              </div>
            </div>

            <!-- Pricing Section -->
            <div class="space-y-4 sm:space-y-6 pt-6 sm:pt-8 border-t border-gray-200">
              <div class="text-center lg:text-left">
                <div class="flex flex-col sm:flex-row items-center justify-center lg:justify-start gap-2 sm:gap-4">
                  <div class="text-base sm:text-lg text-gray-400 font-bold order-2 sm:order-1">
                    <span class="line-through decoration-2">{partner.originalPrice}</span>
                  </div>
                  
                  <div class="price-tag inline-block text-white px-4 py-2 sm:px-6 sm:py-3 rounded-lg sm:rounded-xl shadow-2xl order-1 sm:order-2">
                    <div class="text-xl sm:text-2xl lg:text-3xl font-black">
                      {partner.discountedPrice}
                    </div>
                  </div>
                </div>
              </div>
              
              <a href={`/form?paket=${encodeURIComponent(partner.title)}`} 
                 class="simple-btn px-6 py-3 sm:px-8 sm:py-4 lg:px-10 lg:py-4 rounded-lg sm:rounded-xl font-bold text-base sm:text-lg shadow-lg hover:shadow-xl transform transition-all duration-300 inline-flex items-center justify-center space-x-2 sm:space-x-3 w-full lg:w-auto mx-auto lg:mx-0">
                <span>Daftar Jadi Mitra</span>
                <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      );
    })}
  </div>
  
</section>

