<script>
  // Script untuk menghubungkan wave dengan footer tetap sama
  document.addEventListener('DOMContentLoaded', () => {
    const footer = document.querySelector('footer');
    const sections = document.querySelectorAll('section');
    
    if (footer && sections.length > 0) {
      // Find the section right before footer
      const lastSection = Array.from(sections).filter(section => {
        const sectionRect = section.getBoundingClientRect();
        const footerRect = footer.getBoundingClientRect();
        return sectionRect.bottom <= footerRect.top + 5;
      }).pop();
      
      if (lastSection) {
        let scrollTimeoutId: ReturnType<typeof setTimeout> | null = null;
        
        window.addEventListener('scroll', () => {
          if (scrollTimeoutId) clearTimeout(scrollTimeoutId);
          
          scrollTimeoutId = setTimeout(() => {
            const footerRect = footer.getBoundingClientRect();
            const lastSectionRect = lastSection.getBoundingClientRect();
            
            if (footerRect.top - lastSectionRect.bottom > 1) {
              const connector = document.querySelector('.footer-wave-connector');
              if (connector && connector instanceof HTMLElement) {
                connector.style.height = '5px';
              }
            }
          }, 100);
        });
      }
    }

    // Social Media Real-time Data Functions
    async function fetchSocialMediaData() {
      try {
        // Menggunakan API internal yang lebih aman
        const response = await fetch('/api/social-stats');
        
        if (!response.ok) throw new Error('API request failed');
        
        const result = await response.json();
        
        if (result.success && result.data) {
          const data = result.data;
          
          // Update Instagram data
          if (data.instagram) {
            updateSocialCount('ig-followers', data.instagram.followers);
            updateSocialCount('ig-following', data.instagram.following);
          }
          
          // Update Twitter/X data
          if (data.twitter) {
            updateSocialCount('x-followers', data.twitter.followers);
            updateSocialCount('x-following', data.twitter.following);
          }
          
          // Update LinkedIn data
          if (data.linkedin) {
            updateSocialCount('li-followers', data.linkedin.followers);
            updateSocialCount('li-connections', data.linkedin.connections);
          }
          
          // Update YouTube data
          if (data.youtube) {
            updateSocialCount('yt-subscribers', data.youtube.subscribers);
            updateSocialCount('yt-videos', data.youtube.videos);
          }
        } else {
          // Jika API gagal, gunakan data fallback
          setFallbackData();
        }

      } catch (error) {
        console.error('Error fetching social media data:', error);
        // Fallback ke data static jika API gagal
        setFallbackData();
      }
    }

    // Helper function untuk update angka dengan animasi
    function updateSocialCount(elementId: string, newCount: number) {
      const element = document.getElementById(elementId);
      if (!element) return;

      const currentCount = parseInt(element.getAttribute('data-count') || '0');
      
      // Jika ini adalah load pertama (currentCount = 0), langsung set ke angka final
      if (currentCount === 0) {
        element.textContent = formatNumber(newCount);
        element.setAttribute('data-count', newCount.toString());
        return;
      }

      // Animasi perubahan angka
      const increment = Math.ceil(Math.abs(newCount - currentCount) / 30);
      let current = currentCount;
      const isIncreasing = newCount > currentCount;

      const animateCount = () => {
