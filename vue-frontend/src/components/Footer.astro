<style>
  footer {
    position: relative;
    z-index: 10;
    margin-top: -2px; 
    isolation: isolate; 
  }

  footer {
    transform: translateZ(0);
    backface-visibility: hidden;
    will-change: transform;
    display: block; 
    height: 100%;
    width: 100%;
  }

  .footer-wave-connector {
    position: absolute;
    top: -2px;
    left: 0;
    right: 0;
    height: 2px;
    background-color: #0f172a; 
    z-index: -1;
  }
  
  /* Social Media Popover Styles */
  .social-popover-container {
    position: relative;
    display: inline-block;
  }

  .social-popover {
    position: absolute;
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%) translateY(-10px);
    background: #1f2937;
    border: 1px solid #374151;
    border-radius: 16px;
    padding: 16px;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.3), 0 10px 10px -5px rgba(0, 0, 0, 0.1);
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    min-width: 280px;
    z-index: 50;
    backdrop-filter: blur(10px);
  }

  .social-popover::before {
    content: '';
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    border: 8px solid transparent;
    border-top-color: #1f2937;
  }

  .social-popover-container:hover .social-popover {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(-5px);
  }

  .popover-content {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    margin-bottom: 12px;
  }

  .popover-avatar {
    flex-shrink: 0;
  }

  .popover-info {
    flex: 1;
    min-width: 0;
  }

  .popover-button {
    display: block;
    width: 100%;
    background: #3b82f6;
    color: white;
    text-align: center;
    padding: 8px 16px;
    border-radius: 8px;
    text-decoration: none;
    font-size: 14px;
    font-weight: 600;
    transition: background-color 0.2s;
  }

  .popover-button:hover {
    background: #2563eb;
  }

  /* Instagram popover button */
  .social-popover-container:nth-child(1) .popover-button {
    background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
  }

  .social-popover-container:nth-child(1) .popover-button:hover {
    background: linear-gradient(45deg, #d6842a 0%, #c55a33 25%, #c3233a 50%, #b31f5c 75%, #a3167a 100%);
  }

  /* X (Twitter) popover button */
  .social-popover-container:nth-child(2) .popover-button {
    background: #000000;
  }

  .social-popover-container:nth-child(2) .popover-button:hover {
    background: #1a1a1a;
  }

  /* LinkedIn popover button */
  .social-popover-container:nth-child(3) .popover-button {
    background: #000000;
  }

  .social-popover-container:nth-child(3) .popover-button:hover {
    background: #1a1a1a;
  }

  /* YouTube popover button */
  .social-popover-container:nth-child(4) .popover-button {
    background: #ff0000;
  }

  .social-popover-container:nth-child(4) .popover-button:hover {
    background: #cc0000;
  }

  /* Responsive behavior */
  @media (max-width: 640px) {
    .social-popover {
      min-width: 250px;
      padding: 12px;
    }
    
    .popover-content {
      gap: 8px;
    }
    
    .popover-avatar .w-12 {
      width: 2.5rem;
      height: 2.5rem;
    }
  }
  
  /* Menyesuaikan ukuran dan posisi container wave berdasarkan ukuran layar */
  footer > div:first-child {
    position: absolute;
    top: -40px;
    left: 0;
    width: 100%;
    height: 40px;
    overflow: visible;
    line-height: 0;
    font-size: 0;
    pointer-events: none;
  }
  
  /* Ukuran dan posisi untuk tablet dan desktop */
  @media screen and (min-width: 640px) {
    footer > div:first-child {
      top: -59px;
      height: 60px;
    }
  }
  
  /* Browser-specific fixes tetap sama */
  @supports (-webkit-overflow-scrolling: touch) {
    footer > div:first-child {
      -webkit-transform: translate3d(0,0,0);
      -webkit-backface-visibility: hidden;
    }
  }
  
  @-moz-document url-prefix() {
    footer > div:first-child {
      transform: translate3d(0,0,0);
      backface-visibility: hidden;
    }
  }
  
  @media screen and (-ms-high-contrast: active), (-ms-high-contrast: none) {
    footer > div:first-child svg {
      height: 40px;
    }
    
    @media screen and (min-width: 640px) {
      footer > div:first-child svg {
        height: 60px;
      }
    }
  }
</style>

<script>
  // Script untuk menghubungkan wave dengan footer tetap sama
  document.addEventListener('DOMContentLoaded', () => {
    const footer = document.querySelector('footer');
    const sections = document.querySelectorAll('section');
    
    if (footer && sections.length > 0) {
      // Find the section right before footer
      const lastSection = Array.from(sections).filter(section => {
        const sectionRect = section.getBoundingClientRect();
        const footerRect = footer.getBoundingClientRect();
        return sectionRect.bottom <= footerRect.top + 5;
      }).pop();
      
      if (lastSection) {
        let scrollTimeoutId: ReturnType<typeof setTimeout> | null = null;
        
        window.addEventListener('scroll', () => {
          if (scrollTimeoutId) clearTimeout(scrollTimeoutId);
          
          scrollTimeoutId = setTimeout(() => {
            const footerRect = footer.getBoundingClientRect();
            const lastSectionRect = lastSection.getBoundingClientRect();
            
            if (footerRect.top - lastSectionRect.bottom > 1) {
              const connector = document.querySelector('.footer-wave-connector');
              if (connector && connector instanceof HTMLElement) {
                connector.style.height = '5px';
              }
            }
          }, 100);
          });
        }
      }
    });
</script>