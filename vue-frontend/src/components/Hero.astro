---
// Hero.astro
---

<section class="bg-white min-h-[calc(100vh-4rem)] pb-5 flex items-center relative">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 sm:py-8">
    <div class="flex flex-col lg:flex-row items-center justify-between gap-6 sm:gap-8 lg:gap-16">
      
      <!-- Image Content - ALWAYS FIRST ON MOBILE -->
      <div class="flex-1 max-w-lg lg:max-w-xl xl:max-w-2xl relative lg:order-2 order-1 p-4 sm:p-6 lg:p-8">
        <div class="relative">
          <!-- Background Circle -->
          <div class="absolute inset-0 bg-blue-100 rounded-full transform scale-110 opacity-50"></div>
          
          <!-- Main Image Container -->
          <div class="relative z-10 bg-white rounded-full p-8 shadow-lg">
            <img 
              src="/src/assets/img/heroes_img.png" 
              alt="Business Partnership Illustration" 
              class="w-full h-auto rounded-full"
            />
          </div>
          
          <!-- Floating Elements -->
          <div class="absolute top-4 right-4 bg-white rounded-full p-3 shadow-lg animate-float">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          
          <div class="absolute bottom-8 left-4 bg-white rounded-full p-3 shadow-lg animate-float-delay">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          
          <div class="absolute top-1/2 -left-4 bg-white rounded-full p-3 shadow-lg animate-float">
            <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </div>
        </div>
      </div>
      
      <!-- Text Content - ALWAYS SECOND ON MOBILE -->
      <div class="flex-1 max-w-xl lg:max-w-2xl lg:order-1 order-2 text-center lg:text-left">
        <h1 class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-bold text-gray-900 mb-4 sm:mb-6 leading-tight">
          "We walk forward with trust."
        </h1>
        
        <p class="text-gray-600 text-base sm:text-lg lg:text-xl mb-6 sm:mb-8 leading-relaxed max-w-prose mx-auto lg:mx-0">
          We are committed to building trust and creating professional,
          structured business opportunities that support the growth of our
          partners throughout Indonesia.
        </p>
        
        <!-- WhatsApp Button -->
        <a 
          href="https://wa.me/" 
          class="inline-flex items-center gap-3 bg-green-500 hover:bg-green-600 text-white px-6 py-3 rounded-lg font-medium transition-colors duration-200 shadow-lg hover:shadow-xl"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488z"/>
          </svg>
          Hubungi Kami
        </a>
      </div>
    </div>
  </div>
      

<style>  
  /* Ensure navbar sticky works properly */
  .navbar {
		position: sticky;
		top: 0;
		z-index: 50;
	}
  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }
  
  @keyframes float-delay {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-15px);
    }
  }
  
  .animate-float {
    animation: float 3s ease-in-out infinite;
    z-index: 10;
  }
  
  .animate-float-delay {
    animation: float-delay 3s ease-in-out infinite 1.5s;
    z-index: 10;
  }
</style>